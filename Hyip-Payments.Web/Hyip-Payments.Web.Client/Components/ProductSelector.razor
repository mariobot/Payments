@using Hyip_Payments.Web.Client.DTOs
@inject HttpClient Http

<div class="card mb-3">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="bi bi-cart-plus"></i> Add Products</h5>
    </div>
    <div class="card-body">
        @if (isLoading)
        {
            <div class="text-center">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading products...</span>
                </div>
            </div>
        }
        else if (products == null || !products.Any())
        {
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle"></i> No products available. Please add products first.
            </div>
        }
        else
        {
            <div class="row g-3">
                <div class="col-md-5">
                    <label for="productSelect" class="form-label">Product</label>
                    <select id="productSelect" @bind="selectedProductId" @bind:after="OnProductChangedTask" class="form-select">
                        <option value="0">-- Select Product --</option>
                        @foreach (var product in products)
                        {
                            <option value="@product.Id">@product.Name</option>
                        }
                    </select>
                </div>

                <div class="col-md-3">
                    <label for="unitPrice" class="form-label">Unit Price</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input type="number" id="unitPrice" @bind="unitPrice" class="form-control" step="0.01" readonly />
                    </div>
                </div>

                <div class="col-md-2">
                    <label for="quantity" class="form-label">Quantity</label>
                    <input type="number" id="quantity" @bind="quantity" class="form-control" min="1" />
                </div>

                <div class="col-md-2">
                    <label class="form-label">&nbsp;</label>
                    <button type="button" @onclick="AddProduct" class="btn btn-success w-100" disabled="@(selectedProductId == 0)">
                        <i class="bi bi-plus-circle"></i> Add
                    </button>
                </div>
            </div>

            @if (selectedProductId > 0)
            {
                <div class="mt-2">
                    <small class="text-muted">
                        <i class="bi bi-info-circle"></i> Total: <strong>$@((quantity * unitPrice).ToString("F2"))</strong>
                    </small>
                </div>
            }
        }
    </div>
</div>

@code {
    [Parameter] public EventCallback<InvoiceItemDto> OnProductAdded { get; set; }

    private List<ProductSelectionDto>? products;
    private int selectedProductId = 0;
    private decimal unitPrice = 0;
    private int quantity = 1;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            products = await Http.GetFromJsonAsync<List<ProductSelectionDto>>("api/Product/for-selection");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading products: {ex.Message}");
            products = new List<ProductSelectionDto>();
        }
        finally
        {
            isLoading = false;
        }
    }

    private Task OnProductChangedTask()
    {
        var product = products?.FirstOrDefault(p => p.Id == selectedProductId);
        if (product != null)
        {
            unitPrice = product.Price;
        }
        else
        {
            unitPrice = 0;
        }
        return Task.CompletedTask;
    }

    private async Task AddProduct()
    {
        if (selectedProductId == 0 || quantity <= 0)
            return;

        var product = products?.FirstOrDefault(p => p.Id == selectedProductId);
        if (product != null)
        {
            var item = new InvoiceItemDto
            {
                ProductId = product.Id,
                ItemName = product.Name,
                Quantity = quantity,
                UnitPrice = unitPrice
            };

            await OnProductAdded.InvokeAsync(item);

            // Reset form
            selectedProductId = 0;
            unitPrice = 0;
            quantity = 1;
        }
    }
}
