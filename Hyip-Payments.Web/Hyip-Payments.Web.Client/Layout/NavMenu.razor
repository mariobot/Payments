        <!-- Product Section -->
        <div class="mt-2 mb-1 fw-bold text-uppercase px-2" style="font-size: 0.7rem; color: var(--ms-orange-warning);">
            <i class="bi bi-box-seam"></i> Products
        </div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/product/list">
                <span class="bi bi-list-ul"></span> All Products
            </NavLink>
        </div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/product/add">
                <span class="bi bi-plus-circle"></span> New Product
            </NavLink>
        </div>

        <!-- Market/Shopping Section -->
        <div class="mt-2 mb-1 fw-bold text-uppercase px-2" style="font-size: 0.7rem; color: var(--ms-cyan-info);">
            <i class="bi bi-shop"></i> Market
        </div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/products">
                <span class="bi bi-shop"></span> Browse Products
            </NavLink>
        </div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/market">
                <span class="bi bi-cart3"></span> Shopping Cart
            </NavLink>
        </div>

        <!-- Pay method Section -->
        <div class="mt-2 mb-1 fw-bold text-uppercase text-secondary px-2" style="font-size: 0.7rem;">₿ Pay Method</div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/paymentmethod/list">
                <span class="bi bi-list-nested-nav-menu"></span> View All
