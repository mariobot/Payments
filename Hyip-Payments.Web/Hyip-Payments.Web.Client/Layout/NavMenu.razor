            <NavLink class="nav-link py-1 small" href="/customer/add">
                <span class="bi bi-plus-circle"></span> New Customer
            </NavLink>
        </div>

        <!-- Payment Section -->
        <div class="mt-2 mb-1 fw-bold text-uppercase px-2" style="font-size: 0.7rem; color: var(--ms-green-success);">
            <i class="bi bi-cash-stack"></i> Payments
        </div>

        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/payment/list">
                <span class="bi bi-list-ul"></span> All Payments
            </NavLink>
        </div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/payment/add">
                <span class="bi bi-plus-circle"></span> New Payment
            </NavLink>
        </div>

        <!-- Country Section -->
        <div class="mt-2 mb-1 fw-bold text-uppercase text-secondary px-2" style="font-size: 0.7rem;">🌍 Countries</div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/country/list">                     
                <span class="bi bi-list-nested-nav-menu"></span> View All
            </NavLink>
        </div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/country/add2">
                <span class="bi bi-plus-square-fill-nav-menu"></span> Add New
            </NavLink>
        </div>

        <!-- Money Section -->
        <div class="mt-2 mb-1 fw-bold text-uppercase text-secondary px-2" style="font-size: 0.7rem;">💵 Currency</div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/money/list">
