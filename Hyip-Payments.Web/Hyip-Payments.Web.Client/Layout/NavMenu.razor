        </div>

        <!-- Category Section -->
        <div class="mt-2 mb-1 fw-bold text-uppercase text-secondary px-2" style="font-size: 0.7rem;">📂 Categories</div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/category/list">
                <span class="bi bi-list-nested-nav-menu"></span> View All
            </NavLink>
        </div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/category/add">
                <span class="bi bi-plus-square-fill-nav-menu"></span> Add New
