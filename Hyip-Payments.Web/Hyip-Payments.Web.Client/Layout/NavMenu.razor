            </NavLink>
        </div>

        <!-- Invoice Section -->
        <div class="mt-2 mb-1 fw-bold text-uppercase px-2" style="font-size: 0.7rem; color: var(--ms-blue-primary);">
            <i class="bi bi-receipt"></i> Invoices
        </div>

        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/invoice/list">
                <span class="bi bi-list-ul"></span> All Invoices
            </NavLink>
        </div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/invoice/add">
                <span class="bi bi-plus-circle"></span> New Invoice
            </NavLink>
        </div>

        <!-- Customer Section -->
        <div class="mt-2 mb-1 fw-bold text-uppercase px-2" style="font-size: 0.7rem; color: var(--ms-purple);">
            <i class="bi bi-people"></i> Customers
        </div>

        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/customer/list">
                <span class="bi bi-list-ul"></span> All Customers
            </NavLink>
        </div>
