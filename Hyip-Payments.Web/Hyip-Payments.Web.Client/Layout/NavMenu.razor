@implements IDisposable

@inject NavigationManager NavigationManager

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand small" href="">💰 HYIP Payments</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <!-- General -->
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>

        <!-- Invoice Section -->
        <div class="mt-2 mb-1 fw-bold text-uppercase text-secondary px-2" style="font-size: 0.7rem;">📄 Invoices</div>
        
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/invoice">
                <span class="bi bi-list-nested-nav-menu"></span> View All Invoices
            </NavLink>
        </div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/invoice/list">
                <span class="bi bi-list-nested-nav-menu"></span> View All
            </NavLink>
        </div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/invoice/add">
                <span class="bi bi-plus-square-fill-nav-menu"></span> Create Invoice
            </NavLink>
        </div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/invoiceitem/add">
                <span class="bi bi-plus-circle"></span> Add Item
            </NavLink>
        </div>

        <!-- Country Section -->
        <div class="mt-2 mb-1 fw-bold text-uppercase text-secondary px-2" style="font-size: 0.7rem;">🌍 Countries</div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/country/list">                     
                <span class="bi bi-list-nested-nav-menu"></span> View All
            </NavLink>
        </div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/country/add2">
                <span class="bi bi-plus-square-fill-nav-menu"></span> Add New
            </NavLink>
        </div>

        <!-- Money Section -->
        <div class="mt-2 mb-1 fw-bold text-uppercase text-secondary px-2" style="font-size: 0.7rem;">💵 Currency</div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/money/list">
                <span class="bi bi-list-nested-nav-menu"></span> View All
            </NavLink>
        </div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/addmoney2">
                <span class="bi bi-plus-square-fill-nav-menu"></span> Add New
            </NavLink>
        </div>

        <!-- Brand Section -->
        <div class="mt-2 mb-1 fw-bold text-uppercase text-secondary px-2" style="font-size: 0.7rem;">🏷️ Brands</div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/brand/list">
                <span class="bi bi-list-nested-nav-menu"></span> View All
            </NavLink>
        </div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/brand/add">
                <span class="bi bi-plus-square-fill-nav-menu"></span> Add New
            </NavLink>
        </div>

        <!-- Category Section -->
        <div class="mt-2 mb-1 fw-bold text-uppercase text-secondary px-2" style="font-size: 0.7rem;">📂 Categories</div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/category/list">
                <span class="bi bi-list-nested-nav-menu"></span> View All
            </NavLink>
        </div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/category/add">
                <span class="bi bi-plus-square-fill-nav-menu"></span> Add New
            </NavLink>
        </div>

        <!-- Product Section -->
        <div class="mt-2 mb-1 fw-bold text-uppercase text-secondary px-2" style="font-size: 0.7rem;">📦 Products</div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/product/list">
                <span class="bi bi-list-nested-nav-menu"></span> View All
            </NavLink>
        </div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/product/add">
                <span class="bi bi-plus-square-fill-nav-menu"></span> Add New
            </NavLink>
        </div>

        <!-- Coin Section -->
        <div class="mt-2 mb-1 fw-bold text-uppercase text-secondary px-2" style="font-size: 0.7rem;">₿ Crypto</div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/coin/list">
                <span class="bi bi-list-nested-nav-menu"></span> View All
            </NavLink>
        </div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/coin/add">
                <span class="bi bi-plus-square-fill-nav-menu"></span> Add New
            </NavLink>
        </div>

        <!-- Wallet Section -->
        <div class="mt-2 mb-1 fw-bold text-uppercase text-secondary px-2" style="font-size: 0.7rem;">💳 Wallets</div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/wallet/list">
                <span class="bi bi-list-nested-nav-menu"></span> View All
            </NavLink>
        </div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/wallet/add">
                <span class="bi bi-plus-square-fill-nav-menu"></span> Add New
            </NavLink>
        </div>

        <!-- Users Section -->
        <div class="mt-2 mb-1 fw-bold text-uppercase text-secondary px-2" style="font-size: 0.7rem;">👥 Users</div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/user/info">
                <span class="bi bi-person-badge-nav-menu"></span> My Info
            </NavLink>
        </div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/profile">
                <span class="bi bi-person-circle"></span> My Profile
            </NavLink>
        </div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/user/list">
                <span class="bi bi-list-nested-nav-menu"></span> All Users
            </NavLink>
        </div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/user/add">
                <span class="bi bi-plus-square-fill-nav-menu"></span> Add User
            </NavLink>
        </div>

        <!-- Auth Section -->
        <AuthorizeView>
            <Authorized>
                <div class="mt-2 mb-1 fw-bold text-uppercase text-secondary px-2" style="font-size: 0.7rem;">👤 Account</div>
                <div class="nav-item px-2">
                    <NavLink class="nav-link py-1 small" href="Account/Manage">
                        <span class="bi bi-person-fill-nav-menu" aria-hidden="true"></span> @context.User.Identity?.Name
                    </NavLink>
                </div>
                <div class="nav-item px-2">
                    <NavLink class="nav-link py-1 small" href="Account/Manage/ChangePassword">
                        <span class="bi bi-lock-nav-menu" aria-hidden="true"></span> Password
                    </NavLink>
                </div>
                <div class="nav-item px-2">
                    <NavLink class="nav-link py-1 small" href="Account/Manage/Email">
                        <span class="bi bi-envelope-nav-menu" aria-hidden="true"></span> Email
                    </NavLink>
                </div>
                <div class="nav-item px-2">
                    <form action="Account/Logout" method="post">
                        <AntiforgeryToken />
                        <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                        <button type="submit" class="nav-link py-1 small">
                            <span class="bi bi-arrow-bar-left-nav-menu" aria-hidden="true"></span> Logout
                        </button>
                    </form>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="mt-2 mb-1 fw-bold text-uppercase text-secondary px-2" style="font-size: 0.7rem;">🔐 Account</div>
                <div class="nav-item px-2">
                    <NavLink class="nav-link py-1 small" href="Account/Register">
                        <span class="bi bi-person-nav-menu" aria-hidden="true"></span> Register
                    </NavLink>
                </div>
                <div class="nav-item px-2">
                    <NavLink class="nav-link py-1 small" href="Account/Login">
                        <span class="bi bi-person-badge-nav-menu" aria-hidden="true"></span> Login
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}
