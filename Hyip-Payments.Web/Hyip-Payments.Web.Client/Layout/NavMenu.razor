            <NavLink class="nav-link py-1 small" href="/coin/add">
                <span class="bi bi-plus-square-fill-nav-menu"></span> Add New
            </NavLink>
        </div>

        <!-- Wallet Section -->
        <div class="mt-2 mb-1 fw-bold text-uppercase text-secondary px-2" style="font-size: 0.7rem;">💳 Wallets</div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/wallet/list">
                <span class="bi bi-list-nested-nav-menu"></span> View All
            </NavLink>
        </div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/wallet/add">
                <span class="bi bi-plus-square-fill-nav-menu"></span> Add New
            </NavLink>
        </div>
        <!-- Reports Section -->
        <div class="mt-2 mb-1 fw-bold text-uppercase text-secondary px-2" style="font-size: 0.7rem;">📊 Reports</div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/reports">
                <span class="bi bi-graph-up-arrow"></span> Reports Dashboard
            </NavLink>
        </div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/reports/revenue">
                <span class="bi bi-cash-stack"></span> Revenue Report
            </NavLink>
        </div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/reports/expenses">
                <span class="bi bi-graph-down-arrow"></span> Expense Report
            </NavLink>
        </div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/reports/profit-loss">
                <span class="bi bi-calculator"></span> Profit & Loss
            </NavLink>
        </div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/reports/cash-flow">
                <span class="bi bi-cash-coin"></span> Cash Flow
            </NavLink>
        </div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/reports/invoice-summary">
                <span class="bi bi-file-earmark-text"></span> Invoice Summary
            </NavLink>
        </div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/reports/payment-summary">
                <span class="bi bi-credit-card-2-front"></span> Payment Summary
            </NavLink>
        </div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/reports/payment-status">
                <span class="bi bi-check2-circle"></span> Payment Status
            </NavLink>
        </div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/reports/user-activity">
                <span class="bi bi-people"></span> User Activity
            </NavLink>
        </div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/reports/active-users">
                <span class="bi bi-people-fill"></span> Active Users
            </NavLink>
        </div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/reports/user-roles">
                <span class="bi bi-person-badge"></span> User Roles
            </NavLink>
        </div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/reports/audit-trail">
                <span class="bi bi-shield-check"></span> Audit Trail
            </NavLink>
        </div>

        <!-- Users Section -->
        <div class="mt-2 mb-1 fw-bold text-uppercase text-secondary px-2" style="font-size: 0.7rem;">👥 Users</div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/user/jwt">
                <span class="bi bi-person-badge-nav-menu"></span> User JWT
            </NavLink>
        </div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/user/info">
                <span class="bi bi-person-badge-nav-menu"></span> My Info
            </NavLink>
        </div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/profile">
                <span class="bi bi-person-circle"></span> My Profile
            </NavLink>
        </div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/user/list">
                <span class="bi bi-list-nested-nav-menu"></span> All Users
            </NavLink>
        </div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/user/add">
                <span class="bi bi-plus-square-fill-nav-menu"></span> Add User
            </NavLink>
        </div>

        <!-- Admin Tools Section -->
        <div class="mt-2 mb-1 fw-bold text-uppercase text-secondary px-2" style="font-size: 0.7rem;">⚙️ Admin Tools</div>
        <div class="nav-item px-2">
            <NavLink class="nav-link py-1 small" href="/admin/customer-balance">
                <span class="bi bi-calculator"></span> Balance Management
            </NavLink>
        </div>

        <!-- Auth Section -->
        <AuthorizeView>
            <Authorized>
                <div class="mt-2 mb-1 fw-bold text-uppercase text-secondary px-2" style="font-size: 0.7rem;">👤 Account</div>
                <div class="nav-item px-2">
                    <NavLink class="nav-link py-1 small" href="Account/Manage">
                        <span class="bi bi-person-fill-nav-menu" aria-hidden="true"></span> @context.User.Identity?.Name
                    </NavLink>
                </div>
                <div class="nav-item px-2">
                    <NavLink class="nav-link py-1 small" href="Account/Manage/ChangePassword">
                        <span class="bi bi-lock-nav-menu" aria-hidden="true"></span> Password
                    </NavLink>
                </div>
                <div class="nav-item px-2">
                    <NavLink class="nav-link py-1 small" href="Account/Manage/Email">
                        <span class="bi bi-envelope-nav-menu" aria-hidden="true"></span> Email
                    </NavLink>
                </div>
                <div class="nav-item px-2">
                    <form action="Account/Logout" method="post">
                        <AntiforgeryToken />
                        <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                        <button type="submit" class="nav-link py-1 small">
                            <span class="bi bi-arrow-bar-left-nav-menu" aria-hidden="true"></span> Logout
                        </button>
                    </form>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="mt-2 mb-1 fw-bold text-uppercase text-secondary px-2" style="font-size: 0.7rem;">🔐 Account</div>
                <div class="nav-item px-2">
                    <NavLink class="nav-link py-1 small" href="/api-login">
                        <span class="bi bi-person-nav-menu" aria-hidden="true"></span> Api Login
                    </NavLink>
                </div>
                <div class="nav-item px-2">
                    <NavLink class="nav-link py-1 small" href="Account/Register">
                        <span class="bi bi-person-nav-menu" aria-hidden="true"></span> Register
                    </NavLink>
                </div>
                <div class="nav-item px-2">
                    <NavLink class="nav-link py-1 small" href="Account/Login">
                        <span class="bi bi-person-badge-nav-menu" aria-hidden="true"></span> Login
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}
