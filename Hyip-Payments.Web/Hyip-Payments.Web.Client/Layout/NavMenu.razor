@implements IDisposable

@inject NavigationManager NavigationManager

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Hyip-Payments.Web</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        <!-- General -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/test" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Test
            </NavLink>
        </div>

        <!-- Invoice Section -->
        <div class="mt-3 mb-1 fw-bold text-uppercase text-secondary px-3 small">Invoices</div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/invoice">
                <span class="bi bi-file-earmark-text"></span> Invoice List
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/invoice/add">
                <span class="bi bi-file-earmark-plus"></span> Create Invoice
            </NavLink>
        </div>

        <!-- Country Section -->
        <div class="mt-3 mb-1 fw-bold text-uppercase text-secondary px-3 small">Countries</div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/country/list">
                <span class="bi bi-cash"></span> Country List
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/AddCountry">
                <span class="bi bi-cash"></span> Add Country
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/country/add2">
                <span class="bi bi-cash"></span> Add Country 2
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/DeleteCountry">
                <span class="bi bi-trash"></span> Delete Country
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/UpdateCountry">
                <span class="bi bi-arrow-repeat"></span> Update Country
            </NavLink>
        </div>

        <!-- Money Section -->
        <div class="mt-3 mb-1 fw-bold text-uppercase text-secondary px-3 small">Money</div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/AddMoney">
                <span class="bi bi-cash"></span> Add Money
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/DeleteMoney">
                <span class="bi bi-trash"></span> Delete Money
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/UpdateMoney">
                <span class="bi bi-arrow-repeat"></span> Update Money
            </NavLink>
        </div>

        <!-- Auth Section -->
        <AuthorizeView>
            <Authorized>
                <div class="mt-3 mb-1 fw-bold text-uppercase text-secondary px-3 small">Account</div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Manage">
                        <span class="bi bi-person-fill-nav-menu" aria-hidden="true"></span> @context.User.Identity?.Name
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <form action="Account/Logout" method="post">
                        <AntiforgeryToken />
                        <input type="hidden" name="ReturnUrl" value="@currentUrl" />
                        <button type="submit" class="nav-link">
                            <span class="bi bi-arrow-bar-left-nav-menu" aria-hidden="true"></span> Logout
                        </button>
                    </form>
                </div>
            </Authorized>
            <NotAuthorized>
                <div class="mt-3 mb-1 fw-bold text-uppercase text-secondary px-3 small">Account</div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Register">
                        <span class="bi bi-person-nav-menu" aria-hidden="true"></span> Register
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="Account/Login">
                        <span class="bi bi-person-badge-nav-menu" aria-hidden="true"></span> Login
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    private string? currentUrl;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}
