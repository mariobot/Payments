@page "/admin/customer-balance"
@inject HttpClient Http
@inject NavigationManager Navigation

<PageTitle>Customer Balance Management</PageTitle>

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-info text-white">
            <h3 class="mb-0">
                <i class="bi bi-calculator"></i> Customer Balance Management
            </h3>
        </div>
        <div class="card-body">
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i>
                <strong>About Customer Balance Auto-Update:</strong>
                <ul class="mb-0 mt-2">
                    <li>Balances are automatically updated when invoices are created, updated, or deleted</li>
                    <li>Balances are automatically updated when payments are recorded</li>
                    <li>Use the tools below only for data reconciliation or troubleshooting</li>
                </ul>
            </div>

            <hr />

            <!-- Single Customer Balance Update -->
            <div class="card mb-3">
                <div class="card-header bg-light">
                    <h5 class="mb-0">Update Single Customer Balance</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8 mb-3">
                            <label class="form-label fw-bold">Customer ID</label>
                            <input type="number" class="form-control" @bind="singleCustomerId" placeholder="Enter Customer ID" />
                        </div>
                        <div class="col-md-4 mb-3 d-flex align-items-end">
                            <button class="btn btn-primary w-100" @onclick="UpdateSingleCustomer" disabled="@isProcessing">
                                @if (isProcessing)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                }
                                <i class="bi bi-arrow-clockwise"></i> Update Balance
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recalculate All Balances -->
            <div class="card mb-3">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Recalculate All Customer Balances</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle"></i>
                        <strong>Warning:</strong> This will recalculate balances for ALL customers. 
                        This operation may take some time depending on the number of customers.
                    </div>

                    @if (!showRecalculateConfirm)
                    {
                        <button class="btn btn-warning" @onclick="@(() => showRecalculateConfirm = true)" disabled="@isProcessing">
                            <i class="bi bi-calculator"></i> Recalculate All Balances
                        </button>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            <strong>Are you sure?</strong> This will recalculate balances for all customers.
                            <div class="mt-3">
                                <button class="btn btn-danger me-2" @onclick="RecalculateAllBalances" disabled="@isProcessing">
                                    @if (isProcessing)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2"></span>
                                    }
                                    <i class="bi bi-check-circle"></i> Yes, Proceed
                                </button>
                                <button class="btn btn-secondary" @onclick="@(() => showRecalculateConfirm = false)" disabled="@isProcessing">
                                    <i class="bi bi-x-circle"></i> Cancel
                                </button>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Results -->
            @if (successMessage != null)
            {
                <div class="alert alert-success alert-dismissible fade show">
                    <i class="bi bi-check-circle-fill"></i> @successMessage
                    <button type="button" class="btn-close" @onclick="@(() => successMessage = null)"></button>
                </div>
            }

            @if (errorMessage != null)
            {
                <div class="alert alert-danger alert-dismissible fade show">
                    <i class="bi bi-exclamation-triangle-fill"></i> @errorMessage
                    <button type="button" class="btn-close" @onclick="@(() => errorMessage = null)"></button>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private int? singleCustomerId;
    private bool isProcessing = false;
    private bool showRecalculateConfirm = false;
    private string? successMessage;
    private string? errorMessage;

    private async Task UpdateSingleCustomer()
    {
        if (!singleCustomerId.HasValue || singleCustomerId <= 0)
        {
            errorMessage = "Please enter a valid Customer ID";
            return;
        }

        isProcessing = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            var response = await Http.PostAsync($"api/CustomerBalance/update/{singleCustomerId}", null);

            if (response.IsSuccessStatusCode)
            {
                successMessage = $"Customer {singleCustomerId} balance updated successfully!";
                singleCustomerId = null;
            }
            else
            {
                errorMessage = $"Failed to update balance: {response.ReasonPhrase}";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isProcessing = false;
        }
    }

    private async Task RecalculateAllBalances()
    {
        isProcessing = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            var response = await Http.PostAsync("api/CustomerBalance/recalculate-all", null);

            if (response.IsSuccessStatusCode)
            {
                successMessage = "All customer balances recalculated successfully!";
                showRecalculateConfirm = false;
            }
            else
            {
                errorMessage = $"Failed to recalculate balances: {response.ReasonPhrase}";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isProcessing = false;
        }
    }
}
