@page "/brand/edit/{BrandId:int}"
@using Hyip_Payments.Models
@using System.Net.Http.Json
@inject HttpClient Http
@inject NavigationManager NavigationManager

<PageTitle>Edit Brand</PageTitle>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h3 class="mb-0"><i class="bi bi-pencil-square"></i> Edit Brand</h3>
                </div>
                <div class="card-body">
                    @if (isLoading)
                    {
                        <div class="text-center">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="mt-2">Loading brand...</p>
                        </div>
                    }
                    else if (errorMessage != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle"></i> @errorMessage
                            <button type="button" class="btn-close" @onclick="@(() => errorMessage = null)"></button>
                        </div>
                        <button class="btn btn-secondary" @onclick="GoToList">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </button>
                    }
                    else if (brand != null)
                    {
                        <EditForm Model="@brand" OnValidSubmit="HandleValidSubmit">
                            <DataAnnotationsValidator />
                            <ValidationSummary class="alert alert-danger" />

                            <div class="mb-3 form-check">
                                <InputCheckbox id="isActive" class="form-check-input" @bind-Value="brand.IsActive" />
                                <label for="isActive" class="form-check-label fw-bold">Is Active</label>
                            </div>

                            <hr class="my-4" />

                            <div class="d-flex justify-content-between">
                                <button type="button" class="btn btn-secondary" @onclick="GoToList">
                                    <i class="bi bi-x-circle"></i> Cancel
                                </button>
                                <button type="submit" class="btn btn-warning" disabled="@isSubmitting">
                                    @if (isSubmitting)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                    }
                                    <i class="bi bi-check-circle"></i> Update Brand
                                </button>
                            </div>
                        </EditForm>

                        @if (successMessage != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                                <i class="bi bi-check-circle-fill"></i> @successMessage
                                <button type="button" class="btn-close" @onclick="@(() => successMessage = null)"></button>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public int BrandId { get; set; }

    private BrandModel? brand;
    private bool isLoading = true;
    private bool isSubmitting = false;
    private string? errorMessage;
    private string? successMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadBrand();
    }

    private async Task LoadBrand()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            brand = await Http.GetFromJsonAsync<BrandModel>($"api/Brand/{BrandId}");

            if (brand == null)
            {
                errorMessage = "Brand not found.";
            }
        }
        catch (HttpRequestException httpEx)
        {
            errorMessage = $"Network error: {httpEx.Message}. Please check if the API is running.";
            Console.WriteLine($"HTTP Error: {httpEx.Message}");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading brand: {ex.Message}";
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleValidSubmit()
    {
        if (brand == null) return;

        isSubmitting = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            // Ensure the Id is set from the parameter
            brand.Id = BrandId;

            var response = await Http.PutAsJsonAsync($"api/Brand/{BrandId}", brand);

            if (response.IsSuccessStatusCode)
            {
                successMessage = $"Brand '{brand.Name}' updated successfully!";

                // Redirect after short delay
                await Task.Delay(2000);
                NavigationManager.NavigateTo("/brand/list");
            }
            else
            {
                var error = await response.Content.ReadAsStringAsync();
                errorMessage = $"Failed to update brand: {response.StatusCode} - {error}";
            }
        }
        catch (HttpRequestException httpEx)
        {
            errorMessage = $"Network error: {httpEx.Message}";
            Console.WriteLine($"HTTP Error: {httpEx.Message}");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error updating brand: {ex.Message}";
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void GoToList()
    {
        NavigationManager.NavigateTo("/brand/list");
    }
}

