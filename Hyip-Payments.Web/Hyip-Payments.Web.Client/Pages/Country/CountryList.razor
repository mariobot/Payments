@page "/country/list"

@using Hyip_Payments.Models
@inject HttpClient Http
@inject NavigationManager NavigationManager

<h3>Country List (API)</h3>

@if (countries == null)
{
    <div>Loading countries...</div>
}
else if (!countries.Any())
{
    <div class="alert alert-info">No countries found.</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>ISO Code</th>
                <th>Capital</th>
                <th>Region</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var country in countries)
            {
                <tr>
                    <td>@country.Name</td>
                    <td>@country.IsoCode</td>
                    <td>@country.Capital</td>
                    <td>@country.Region</td>
                    <td>
                        <button class="btn btn-sm btn-primary" @onclick="() => EditCountry(country.Id)">Edit</button>
                    </td>
                    <td>
                        <button class="btn btn-sm btn-danger" @onclick="() => DeleteCountry(country.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<CountryModel>? countries;

    protected override async Task OnInitializedAsync()
    {
        countries = await Http.GetFromJsonAsync<List<CountryModel>>("api/Country");
    }

    private void EditCountry(int id)
    {
        NavigationManager.NavigateTo($"/country/edit2/{id}");
    }

    private void DeleteCountry(int id)
    {
        NavigationManager.NavigateTo($"/country/delete2/{id}");
    }
}
