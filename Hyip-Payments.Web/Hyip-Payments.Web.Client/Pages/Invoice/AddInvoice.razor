@page "/invoice/add"
@using Hyip_Payments.Models
@using Hyip_Payments.Web.Client.Components
@using Hyip_Payments.Web.Client.DTOs
@using System.Net.Http.Json
@inject HttpClient Http
@inject NavigationManager Navigation

<div class="container mt-4">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="bi bi-file-earmark-plus"></i> Create New Invoice</h3>
                </div>
                <div class="card-body">
                    @if (isSubmitting)
                    {
                        <div class="text-center">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="mt-2">Creating invoice...</p>
                        </div>
                    }
                    else
                    {
                        <EditForm Model="@invoice" OnValidSubmit="HandleValidSubmit">
                            <DataAnnotationsValidator />
                            <ValidationSummary class="alert alert-danger" />

                            <!-- Invoice Details -->
                            <div class="card mb-3">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0"><i class="bi bi-file-text"></i> Invoice Details</h5>
                                </div>
                                <div class="card-body">
                                    <!-- Customer Selector -->
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">
                                            <i class="bi bi-person-badge text-primary"></i> Customer
                                            <span class="text-danger">*</span>
                                        </label>
                                        <select class="form-select @GetCustomerSelectClass()" 
                                                @bind="invoice.CustomerId">
                                            <option value="">-- Select Customer --</option>
                                            @foreach (var customer in customers)
                                            {
                                                <option value="@customer.Id">
                                                    @customer.CustomerNumber - @customer.CompanyName (@customer.ContactName)
                                                </option>
                                            }
                                        </select>
                                        @if (!invoice.CustomerId.HasValue || invoice.CustomerId == 0)
                                        {
                                            <div class="form-text text-danger">
                                                <i class="bi bi-exclamation-circle"></i> Please select a customer for this invoice
                                            </div>
                                        }
                                        <div class="form-text">
                                            Don't see the customer? 
                                            <a href="/customer/add" target="_blank" class="text-decoration-none">
                                                <i class="bi bi-plus-circle"></i> Create new customer
                                            </a>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label fw-bold">Invoice Number <span class="text-danger">*</span></label>
                                            <InputText class="form-control" @bind-Value="invoice.InvoiceNumber" placeholder="e.g., INV-2025-001" />
                                            <ValidationMessage For="@(() => invoice.InvoiceNumber)" />
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label fw-bold">Invoice Date <span class="text-danger">*</span></label>
                                            <InputDate class="form-control" @bind-Value="invoice.InvoiceDate" />
                                            <ValidationMessage For="@(() => invoice.InvoiceDate)" />
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Description</label>
                                        <InputTextArea class="form-control" @bind-Value="invoice.Description" rows="2" placeholder="Enter invoice description..." />
                                    </div>
                                </div>
                            </div>

                            <!-- Product Selector -->
                            <ProductSelector OnProductAdded="@ProductAddedCallback" />

                            <!-- Selected Products List -->
                            <div class="card mb-3">
                                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                                    <h5 class="mb-0"><i class="bi bi-list-ul"></i> Selected Products</h5>
                                    <span class="badge bg-primary">@selectedProducts.Count items</span>
                                </div>
                                <div class="card-body">
                                    @if (!selectedProducts.Any())
                                    {
                                        <div class="alert alert-info mb-0">
                                            <i class="bi bi-info-circle"></i> No products added yet. Use the product selector above to add items.
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="table-responsive">
                                            <table class="table table-hover">
                                                <thead class="table-light">
                                                    <tr>
                                                        <th>Product</th>
                                                        <th class="text-center" style="width: 120px;">Quantity</th>
                                                        <th class="text-end" style="width: 150px;">Unit Price</th>
                                                        <th class="text-end" style="width: 150px;">Total</th>
                                                        <th class="text-center" style="width: 80px;">Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in selectedProducts)
                                                    {
                                                        <tr>
                                                            <td>
                                                                <strong>@item.ItemName</strong>
                                                            </td>
                                                            <td class="text-center">
                                                                <input type="number" class="form-control form-control-sm text-center" @bind="item.Quantity" @oninput="StateHasChanged" min="1" style="width: 80px; display: inline-block;" />
                                                            </td>
                                                            <td class="text-end">
                                                                <input type="number" class="form-control form-control-sm text-end" @bind="item.UnitPrice" @oninput="StateHasChanged" step="0.01" style="width: 120px; display: inline-block;" />
                                                            </td>
                                                            <td class="text-end">
                                                                <strong>$@item.Total.ToString("F2")</strong>
                                                            </td>
                                                            <td class="text-center">
                                                                <button type="button" class="btn btn-danger btn-sm" @onclick="@(() => RemoveProduct(item))" title="Remove">
                                                                    <i class="bi bi-trash"></i>
                                                                </button>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                                <tfoot class="table-secondary">
                                                    <tr>
                                                        <td colspan="3" class="text-end fw-bold">Subtotal:</td>
                                                        <td class="text-end fw-bold">$@CalculateSubtotal().ToString("F2")</td>
                                                        <td></td>
                                                    </tr>
                                                    <tr>
                                                        <td colspan="3" class="text-end fw-bold fs-5">Total Amount:</td>
                                                        <td class="text-end fw-bold fs-5 text-primary">$@CalculateTotal().ToString("F2")</td>
                                                        <td></td>
                                                    </tr>
                                                </tfoot>
                                            </table>
                                        </div>
                                    }
                                </div>
                            </div>

                            <hr class="my-4" />

                            <div class="d-flex justify-content-between">
                                <button type="button" class="btn btn-secondary" @onclick="Cancel">
                                    <i class="bi bi-x-circle"></i> Cancel
                                </button>
                                <button type="submit" class="btn btn-primary btn-lg" disabled="@(!selectedProducts.Any() || isSubmitting)">
                                    <i class="bi bi-check-circle"></i> Create Invoice (@selectedProducts.Count items - $@CalculateTotal().ToString("F2"))
                                </button>
                            </div>
                        </EditForm>
                    }
                </div>
            </div>

            @if (successMessage != null)
            {
                <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                    <i class="bi bi-check-circle-fill"></i> @successMessage
                    <button type="button" class="btn-close" @onclick="@(() => successMessage = null)"></button>
                </div>
            }
            @if (errorMessage != null)
            {
                <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                    <i class="bi bi-exclamation-triangle-fill"></i> @errorMessage
                    <button type="button" class="btn-close" @onclick="@(() => errorMessage = null)"></button>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private InvoiceModel invoice = new InvoiceModel
    {
        InvoiceDate = DateTime.Today,
        TotalAmount = 0
    };

    private List<CustomerModel> customers = new();
    private List<InvoiceItemDto> selectedProducts = new();
    private bool isSubmitting = false;
    private string? successMessage;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadCustomers();
    }

    private async Task LoadCustomers()
    {
        try
        {
            customers = await Http.GetFromJsonAsync<List<CustomerModel>>("api/Customer?isActive=true") ?? new();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading customers: {ex.Message}";
            Console.WriteLine($"Error: {ex.Message}");
        }
    }

    private string GetCustomerSelectClass()
    {
        return (!invoice.CustomerId.HasValue || invoice.CustomerId == 0) ? "form-select is-invalid" : "form-select";
    }

    private EventCallback<InvoiceItemDto> ProductAddedCallback => EventCallback.Factory.Create<InvoiceItemDto>(this, HandleProductAdded);

    private Task HandleProductAdded(InvoiceItemDto product)
    {
        selectedProducts.Add(product);
        CalculateTotal();
        StateHasChanged();
        return Task.CompletedTask;
    }

    private Task RemoveProduct(InvoiceItemDto product)
    {
        selectedProducts.Remove(product);
        CalculateTotal();
        StateHasChanged();
        return Task.CompletedTask;
    }

    private decimal CalculateSubtotal()
    {
        return selectedProducts.Sum(p => p.Total);
    }

    private decimal CalculateTotal()
    {
        var total = CalculateSubtotal();
        invoice.TotalAmount = total;
        return total;
    }

    private async Task HandleValidSubmit()
    {
        if (!invoice.CustomerId.HasValue || invoice.CustomerId == 0)
        {
            errorMessage = "Please select a customer for this invoice.";
            return;
        }

        if (!selectedProducts.Any())
        {
            errorMessage = "Please add at least one product to the invoice.";
            return;
        }

        isSubmitting = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            var command = new AddInvoiceWithProductsCommand
            {
                Invoice = new InvoiceDto
                {
                    InvoiceNumber = invoice.InvoiceNumber,
                    InvoiceDate = invoice.InvoiceDate,
                    Description = invoice.Description,
                    TotalAmount = CalculateTotal(),
                    CustomerId = invoice.CustomerId,
                    IsActive = true
                },
                Items = selectedProducts.Select(p => new InvoiceItemDto
                {
                    ProductId = p.ProductId,
                    ItemName = p.ItemName,
                    Quantity = p.Quantity,
                    UnitPrice = p.UnitPrice
                }).ToList()
            };

            var response = await Http.PostAsJsonAsync("api/Invoice/with-products", command);

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<InvoiceWithItemsDto>();
                successMessage = $"Invoice #{result?.InvoiceNumber} created successfully with {selectedProducts.Count} items!";

                // Reset form
                await Task.Delay(2000);
                Navigation.NavigateTo("/invoice/list");
            }
            else
            {
                var error = await response.Content.ReadAsStringAsync();
                errorMessage = $"Failed to create invoice: {error}";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error creating invoice: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/invoice/list");
    }
}
