@page "/invoice/edit/{Id:int}"
@using Hyip_Payments.Models
@using Hyip_Payments.Web.Client.Components
@using Hyip_Payments.Web.Client.DTOs
@using System.Net.Http.Json
@inject HttpClient Http
@inject NavigationManager NavigationManager

<PageTitle>Edit Invoice</PageTitle>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h3 class="mb-0"><i class="bi bi-pencil-square"></i> Edit Invoice</h3>
                </div>
                <div class="card-body">
                    @if (isLoading)
                    {
                        <div class="text-center">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="mt-2">Loading invoice...</p>
                        </div>
                    }
                    else if (errorMessage != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle"></i> @errorMessage
                            <button type="button" class="btn-close" @onclick="@(() => errorMessage = null)"></button>
                        </div>
                        <button class="btn btn-secondary" @onclick="GoToList">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </button>
                    }
                    else if (invoice != null)
                    {
                        <EditForm Model="@invoice" OnValidSubmit="HandleValidSubmit">
                            <DataAnnotationsValidator />
                            <ValidationSummary class="alert alert-danger" />

                            <!-- Invoice Details -->
                            <div class="card mb-3">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0"><i class="bi bi-file-text"></i> Invoice Details</h5>
                                </div>
                                <div class="card-body">
                                    <!-- Customer Selector -->
                                    <div class="mb-3">
                                        <label class="form-label fw-bold">
                                            <i class="bi bi-person-badge text-primary"></i> Customer
                                            <span class="text-danger">*</span>
                                        </label>
                                        <select class="form-select @GetCustomerSelectClass()" 
                                                @bind="invoice.CustomerId">
                                            <option value="">-- Select Customer --</option>
                                            @foreach (var customer in customers)
                                            {
                                                <option value="@customer.Id">
                                                    @customer.CustomerNumber - @customer.CompanyName (@customer.ContactName)
                                                </option>
                                            }
                                        </select>
                                        @if (!invoice.CustomerId.HasValue || invoice.CustomerId == 0)
                                        {
                                            <div class="form-text text-danger">
                                                <i class="bi bi-exclamation-circle"></i> Please select a customer for this invoice
                                            </div>
                                        }
                                        <div class="form-text">
                                            Don't see the customer? 
                                            <a href="/customer/add" target="_blank" class="text-decoration-none">
                                                <i class="bi bi-plus-circle"></i> Create new customer
                                            </a>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label fw-bold">Invoice Number <span class="text-danger">*</span></label>
                                            <InputText class="form-control" @bind-Value="invoice.InvoiceNumber" placeholder="e.g., INV-2025-001" />
                                            <ValidationMessage For="@(() => invoice.InvoiceNumber)" />
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label fw-bold">Invoice Date <span class="text-danger">*</span></label>
                                            <InputDate class="form-control" @bind-Value="invoice.InvoiceDate" />
                                            <ValidationMessage For="@(() => invoice.InvoiceDate)" />
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label fw-bold">Description</label>
                                        <InputTextArea class="form-control" @bind-Value="invoice.Description" rows="2" placeholder="Enter invoice description..." />
                                    </div>
                                </div>
                            </div>

                            <!-- Product Selector for Adding New Items -->
                            <ProductSelector OnProductAdded="@ProductAddedCallback" />

                            <!-- Existing Invoice Items -->
                            <div class="card mb-3">
                                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                                    <h5 class="mb-0"><i class="bi bi-list-ul"></i> Invoice Items</h5>
                                    <span class="badge bg-primary">@invoiceItems.Count items</span>
                                </div>
                                <div class="card-body">
                                    @if (!invoiceItems.Any())
                                    {
                                        <div class="alert alert-info mb-0">
                                            <i class="bi bi-info-circle"></i> No items in this invoice. Use the product selector above to add items.
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="table-responsive">
                                            <table class="table table-hover">
                                                <thead class="table-light">
                                                    <tr>
                                                        <th>Product</th>
                                                        <th class="text-center" style="width: 120px;">Quantity</th>
                                                        <th class="text-end" style="width: 150px;">Unit Price</th>
                                                        <th class="text-end" style="width: 150px;">Total</th>
                                                        <th class="text-center" style="width: 80px;">Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @foreach (var item in invoiceItems)
                                                    {
                                                        <tr>
                                                            <td>
                                                                <input type="text" class="form-control form-control-sm" @bind="item.ItemName" @oninput="StateHasChanged" />
                                                            </td>
                                                            <td class="text-center">
                                                                <input type="number" class="form-control form-control-sm text-center" @bind="item.Quantity" @oninput="StateHasChanged" min="1" style="width: 80px; display: inline-block;" />
                                                            </td>
                                                            <td class="text-end">
                                                                <input type="number" class="form-control form-control-sm text-end" @bind="item.UnitPrice" @oninput="StateHasChanged" step="0.01" style="width: 120px; display: inline-block;" />
                                                            </td>
                                                            <td class="text-end">
                                                                <strong>$@item.Total.ToString("F2")</strong>
                                                            </td>
                                                            <td class="text-center">
                                                                <button type="button" class="btn btn-danger btn-sm" @onclick="@(() => RemoveItem(item))" title="Remove">
                                                                    <i class="bi bi-trash"></i>
                                                                </button>
                                                            </td>
                                                        </tr>
                                                    }
                                                </tbody>
                                                <tfoot class="table-secondary">
                                                    <tr>
                                                        <td colspan="3" class="text-end fw-bold">Subtotal:</td>
                                                        <td class="text-end fw-bold">$@CalculateSubtotal().ToString("F2")</td>
                                                        <td></td>
                                                    </tr>
                                                    <tr>
                                                        <td colspan="3" class="text-end fw-bold fs-5">Total Amount:</td>
                                                        <td class="text-end fw-bold fs-5 text-primary">$@CalculateTotal().ToString("F2")</td>
                                                        <td></td>
                                                    </tr>
                                                </tfoot>
                                            </table>
                                        </div>
                                    }
                                </div>
                            </div>

                            <hr class="my-4" />

                            <div class="d-flex justify-content-between">
                                <button type="button" class="btn btn-secondary" @onclick="GoToList">
                                    <i class="bi bi-x-circle"></i> Cancel
                                </button>
                                <button type="submit" class="btn btn-warning btn-lg" disabled="@(!invoiceItems.Any() || isSubmitting)">
                                    <i class="bi bi-check-circle"></i> Update Invoice (@invoiceItems.Count items - $@CalculateTotal().ToString("F2"))
                                </button>
                            </div>
                        </EditForm>

                        @if (successMessage != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                                <i class="bi bi-check-circle-fill"></i> @successMessage
                                <button type="button" class="btn-close" @onclick="@(() => successMessage = null)"></button>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private InvoiceModel invoice = new InvoiceModel
    {
        InvoiceDate = DateTime.Today,
        TotalAmount = 0
    };

    private List<CustomerModel> customers = new();
    private List<InvoiceItemDto> invoiceItems = new();
    private bool isLoading = true;
    private bool isSubmitting = false;
    private string? errorMessage;
    private string? successMessage;

    private EventCallback<InvoiceItemDto> ProductAddedCallback => EventCallback.Factory.Create<InvoiceItemDto>(this, HandleProductAdded);

    protected override async Task OnInitializedAsync()
    {
        await Task.WhenAll(LoadInvoice(), LoadCustomers());
    }

    private async Task LoadCustomers()
    {
        try
        {
            customers = await Http.GetFromJsonAsync<List<CustomerModel>>("api/Customer?isActive=true") ?? new();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading customers: {ex.Message}");
        }
    }

    private string GetCustomerSelectClass()
    {
        return (!invoice.CustomerId.HasValue || invoice.CustomerId == 0) ? "form-select is-invalid" : "form-select";
    }

    private async Task LoadInvoice()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            // Load invoice with items using the dedicated endpoint
            var invoiceData = await Http.GetFromJsonAsync<InvoiceWithItemsResponse>($"api/Invoice/{Id}/with-items");

            if (invoiceData == null)
            {
                errorMessage = "Invoice not found.";
                return;
            }

            // Map to InvoiceModel
            invoice = new InvoiceModel
            {
                Id = invoiceData.Id,
                InvoiceNumber = invoiceData.InvoiceNumber,
                InvoiceDate = invoiceData.InvoiceDate,
                Description = invoiceData.Description,
                TotalAmount = invoiceData.TotalAmount,
                CustomerId = invoiceData.CustomerId,
                IsActive = invoiceData.IsActive
            };

            // Map items to InvoiceItemDto list for editing
            invoiceItems = invoiceData.Items.Select(item => new InvoiceItemDto
            {
                ProductId = item.ProductId ?? 0, // Use ProductId from response, default to 0 if null
                ItemName = item.ItemName,
                Quantity = item.Quantity,
                UnitPrice = item.UnitPrice
            }).ToList();
        }
        catch (HttpRequestException httpEx)
        {
            errorMessage = $"Network error: {httpEx.Message}. Please check if the API is running.";
            Console.WriteLine($"HTTP Error: {httpEx.Message}");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading invoice: {ex.Message}";
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private Task HandleProductAdded(InvoiceItemDto product)
    {
        invoiceItems.Add(product);
        CalculateTotal();
        StateHasChanged();
        return Task.CompletedTask;
    }

    private Task RemoveItem(InvoiceItemDto item)
    {
        invoiceItems.Remove(item);
        CalculateTotal();
        StateHasChanged();
        return Task.CompletedTask;
    }

    private decimal CalculateSubtotal()
    {
        return invoiceItems.Sum(p => p.Total);
    }

    private decimal CalculateTotal()
    {
        var total = CalculateSubtotal();
        invoice.TotalAmount = total;
        return total;
    }

    private async Task HandleValidSubmit()
    {
        if (!invoice.CustomerId.HasValue || invoice.CustomerId == 0)
        {
            errorMessage = "Please select a customer for this invoice.";
            return;
        }

        if (!invoiceItems.Any())
        {
            errorMessage = "Please add at least one item to the invoice.";
            return;
        }

        isSubmitting = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            // Prepare update command matching the API structure
            var command = new
            {
                InvoiceId = Id,
                Invoice = new
                {
                    InvoiceNumber = invoice.InvoiceNumber,
                    InvoiceDate = invoice.InvoiceDate,
                    Description = invoice.Description,
                    TotalAmount = CalculateTotal(),
                    CustomerId = invoice.CustomerId,
                    IsActive = invoice.IsActive
                },
                Items = invoiceItems.Select(p => new
                {
                    Id = (int?)null, // New items don't have ID
                    ProductId = p.ProductId,
                    ItemName = p.ItemName,
                    Quantity = p.Quantity,
                    UnitPrice = p.UnitPrice
                }).ToList()
            };

            // Use the dedicated endpoint for updating with items
            var response = await Http.PutAsJsonAsync($"api/Invoice/{Id}/with-items", command);

            if (response.IsSuccessStatusCode)
            {
                successMessage = $"Invoice #{invoice.InvoiceNumber} updated successfully with {invoiceItems.Count} items!";

                // Redirect after short delay
                await Task.Delay(2000);
                NavigationManager.NavigateTo("/invoice/list");
            }
            else
            {
                var error = await response.Content.ReadAsStringAsync();
                errorMessage = $"Failed to update invoice: {error}";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error updating invoice: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void GoToList()
    {
        NavigationManager.NavigateTo("/invoice/list");
    }

    // DTOs - Match the API responses
    public class InvoiceWithItemsResponse
    {
        public int Id { get; set; }
        public string InvoiceNumber { get; set; } = string.Empty;
        public DateTime InvoiceDate { get; set; }
        public string? Description { get; set; }
        public decimal TotalAmount { get; set; }
        public int? CustomerId { get; set; }
        public bool IsActive { get; set; }
        public List<InvoiceItemResponse> Items { get; set; } = new();
    }

    public class InvoiceItemResponse
    {
        public int Id { get; set; }
        public int? ProductId { get; set; } // Include ProductId
        public string ItemName { get; set; } = string.Empty;
        public int Quantity { get; set; }
        public decimal UnitPrice { get; set; }
        public decimal Total { get; set; }
    }
}
