@page "/invoice/view/{Id:int}"
@inject HttpClient Http
@inject NavigationManager Navigation

<PageTitle>Invoice Details</PageTitle>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            @if (isLoading)
            {
                <div class="card">
                    <div class="card-body text-center">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <p class="mt-2">Loading invoice details...</p>
                    </div>
                </div>
            }
            else if (invoice == null)
            {
                <div class="alert alert-danger">
                    <i class="bi bi-exclamation-triangle"></i> Invoice not found.
                </div>
                <button class="btn btn-secondary" @onclick="GoBack">
                    <i class="bi bi-arrow-left"></i> Back to List
                </button>
            }
            else
            {
                <!-- Invoice Header -->
                <div class="card mb-3">
                    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                        <h3 class="mb-0"><i class="bi bi-file-earmark-text"></i> Invoice #@invoice.InvoiceNumber</h3>
                        <div>
                            @if (invoice.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Invoice Number:</strong> @invoice.InvoiceNumber</p>
                                <p><strong>Invoice Date:</strong> @invoice.InvoiceDate.ToString("MMMM dd, yyyy")</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Total Amount:</strong> <span class="fs-4 text-primary fw-bold">$@invoice.TotalAmount.ToString("F2")</span></p>
                                <p><strong>Number of Items:</strong> @invoice.Items.Count</p>
                            </div>
                        </div>
                        @if (!string.IsNullOrEmpty(invoice.Description))
                        {
                            <hr />
                            <div>
                                <strong>Description:</strong>
                                <p>@invoice.Description</p>
                            </div>
                        }
                    </div>
                </div>

                <!-- Invoice Items -->
                <div class="card mb-3">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="bi bi-list-ul"></i> Invoice Items</h5>
                    </div>
                    <div class="card-body">
                        @if (!invoice.Items.Any())
                        {
                            <div class="alert alert-info mb-0">
                                <i class="bi bi-info-circle"></i> No items in this invoice.
                            </div>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead class="table-light">
                                        <tr>
                                            <th>#</th>
                                            <th>Item</th>
                                            <th class="text-center">Quantity</th>
                                            <th class="text-end">Unit Price</th>
                                            <th class="text-end">Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var (item, index) in invoice.Items.Select((item, idx) => (item, idx)))
                                        {
                                            <tr>
                                                <td>@(index + 1)</td>
                                                <td><strong>@item.ItemName</strong></td>
                                                <td class="text-center">@item.Quantity</td>
                                                <td class="text-end">$@item.UnitPrice.ToString("F2")</td>
                                                <td class="text-end"><strong>$@item.Total.ToString("F2")</strong></td>
                                            </tr>
                                        }
                                    </tbody>
                                    <tfoot class="table-secondary">
                                        <tr>
                                            <td colspan="4" class="text-end fw-bold">Subtotal:</td>
                                            <td class="text-end fw-bold">$@invoice.Items.Sum(i => i.Total).ToString("F2")</td>
                                        </tr>
                                        <tr class="fs-5">
                                            <td colspan="4" class="text-end fw-bold">Total Amount:</td>
                                            <td class="text-end fw-bold text-primary">$@invoice.TotalAmount.ToString("F2")</td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        }
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="d-flex justify-content-between mb-4">
                    <button class="btn btn-secondary" @onclick="GoBack">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </button>
                    <div>
                        <button class="btn btn-warning me-2" @onclick="EditInvoice">
                            <i class="bi bi-pencil"></i> Edit
                        </button>
                        <button class="btn btn-success" @onclick="PrintInvoice">
                            <i class="bi bi-printer"></i> Print
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@code {
    [Parameter] public int Id { get; set; }

    private InvoiceWithItemsResponse? invoice;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadInvoice();
    }

    private async Task LoadInvoice()
    {
        isLoading = true;
        try
        {
            invoice = await Http.GetFromJsonAsync<InvoiceWithItemsResponse>($"api/Invoice/{Id}/with-items");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading invoice: {ex.Message}");
            invoice = null;
        }
        finally
        {
            isLoading = false;
        }
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/invoice/list");
    }

    private void EditInvoice()
    {
        Navigation.NavigateTo($"/invoice/edit/{Id}");
    }

    private void PrintInvoice()
    {
        // TODO: Implement print functionality
        Console.WriteLine("Print invoice functionality to be implemented");
    }

    public class InvoiceWithItemsResponse
    {
        public int Id { get; set; }
        public string InvoiceNumber { get; set; } = string.Empty;
        public DateTime InvoiceDate { get; set; }
        public string? Description { get; set; }
        public decimal TotalAmount { get; set; }
        public bool IsActive { get; set; }
        public List<InvoiceItemResponse> Items { get; set; } = new();
    }

    public class InvoiceItemResponse
    {
        public int Id { get; set; }
        public string ItemName { get; set; } = string.Empty;
        public int Quantity { get; set; }
        public decimal UnitPrice { get; set; }
        public decimal Total { get; set; }
    }
}
