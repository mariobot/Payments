@page "/payment/add"
@using Hyip_Payments.Models
@using System.Net.Http.Json
@using Microsoft.AspNetCore.Components
@inject HttpClient Http
@inject NavigationManager NavigationManager

<PageTitle>Add Payment Transaction</PageTitle>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-cash-coin"></i> Add New Payment Transaction
                        @if (fromInvoice)
                        {
                            <span class="badge bg-warning text-dark ms-2">
                                <i class="bi bi-file-earmark-text"></i> From Invoice
                            </span>
                        }
                    </h3>
                </div>
                <div class="card-body">
                    @if (loadingInvoice)
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> Loading invoice information...
                        </div>
                    }

                    @if (linkedInvoice != null)
                    {
                        <div class="alert alert-info alert-dismissible fade show" role="alert">
                            <h6 class="alert-heading"><i class="bi bi-link-45deg"></i> Linked Invoice Information</h6>
                            <p class="mb-1"><strong>Invoice #:</strong> @linkedInvoice.InvoiceNumber</p>
                            <p class="mb-1"><strong>Date:</strong> @linkedInvoice.InvoiceDate.ToString("MMM dd, yyyy")</p>
                            <p class="mb-1"><strong>Amount:</strong> $@linkedInvoice.TotalAmount.ToString("F2")</p>
                            <p class="mb-0"><strong>Description:</strong> @(linkedInvoice.Description ?? "N/A")</p>
                        </div>
                    }
                    <EditForm Model="@transaction" OnValidSubmit="HandleValidSubmit">
                        <DataAnnotationsValidator />
                        <ValidationSummary class="alert alert-danger" />

                        <!-- Transaction Details -->
                        <div class="card mb-3">
                            <div class="card-header bg-light">
                                <h5 class="mb-0"><i class="bi bi-info-circle"></i> Transaction Details</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="amount" class="form-label fw-bold">Amount <span class="text-danger">*</span></label>
                                        <div class="input-group">
                                            <span class="input-group-text">$</span>
                                            <InputNumber id="amount" class="form-control" @bind-Value="transaction.Amount" placeholder="0.00" step="0.01" />
                                        </div>
                                        <ValidationMessage For="@(() => transaction.Amount)" />
                                    </div>

                                    <div class="col-md-6 mb-3">
                                        <label for="transactionDate" class="form-label fw-bold">Transaction Date <span class="text-danger">*</span></label>
                                        <InputDate id="transactionDate" class="form-control" @bind-Value="transaction.TransactionDate" />
                                        <ValidationMessage For="@(() => transaction.TransactionDate)" />
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label for="status" class="form-label fw-bold">Status <span class="text-danger">*</span></label>
                                        <InputSelect id="status" class="form-select" @bind-Value="transaction.Status">
                                            <option value="Pending">Pending</option>
                                            <option value="Completed">Completed</option>
                                            <option value="Failed">Failed</option>
                                            <option value="Cancelled">Cancelled</option>
                                        </InputSelect>
                                        <ValidationMessage For="@(() => transaction.Status)" />
                                    </div>

                                    <div class="col-md-6 mb-3">
                                        <label for="reference" class="form-label fw-bold">Reference / Transaction ID</label>
                                        <InputText id="reference" class="form-control" @bind-Value="transaction.Reference" placeholder="Optional reference number" />
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="description" class="form-label fw-bold">Description</label>
                                    <InputTextArea id="description" class="form-control" @bind-Value="transaction.Description" rows="2" placeholder="Enter transaction description (optional)" />
                                </div>
                            </div>
                        </div>

                        <!-- Wallet and Payment Method -->
                        <div class="card mb-3">
                            <div class="card-header bg-light">
                                <h5 class="mb-0"><i class="bi bi-wallet2"></i> Payment Information</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-12 mb-3">
                                        <label for="paymentMethodId" class="form-label fw-bold">Payment Method <span class="text-danger">*</span></label>
                                        @if (paymentMethodsLoading)
                                        {
                                            <div class="spinner-border spinner-border-sm" role="status"></div>
                                        }
                                        else
                                        {
                                            <InputSelect id="paymentMethodId" class="form-select" @bind-Value="transaction.PaymentMethodId">
                                                <option value="0">-- Select Payment Method --</option>
                                                @foreach (var method in paymentMethods)
                                                {
                                                    <option value="@method.Id">@method.Name</option>
                                                }
                                            </InputSelect>
                                            <ValidationMessage For="@(() => transaction.PaymentMethodId)" />
                                        }
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="invoiceId" class="form-label fw-bold">Related Invoice @(fromInvoice ? "(Pre-selected)" : "(Optional)")</label>
                                    @if (invoicesLoading)
                                    {
                                        <div class="spinner-border spinner-border-sm" role="status"></div>
                                    }
                                    else
                                    {
                                        <InputSelect id="invoiceId" class="form-select" @bind-Value="transaction.InvoiceId" @bind-Value:after="OnInvoiceChanged" disabled="@fromInvoice">
                                            <option value="">-- No Invoice --</option>
                                            @foreach (var invoice in invoices)
                                            {
                                                <option value="@invoice.Id">@invoice.InvoiceNumber - $@invoice.TotalAmount.ToString("F2")</option>
                                            }
                                        </InputSelect>
                                        @if (fromInvoice)
                                        {
                                            <small class="form-text text-muted">
                                                <i class="bi bi-lock"></i> Invoice is locked because you came from the invoice page.
                                                <a href="/payment/add" class="ms-2">Clear selection</a>
                                            </small>
                                        }
                                    }
                                </div>
                            </div>
                        </div>

                        <hr class="my-4" />

                        <div class="d-flex justify-content-between">
                            <button type="button" class="btn btn-secondary" @onclick="GoToList">
                                <i class="bi bi-x-circle"></i> Cancel
                            </button>
                            <button type="submit" class="btn btn-success btn-lg" disabled="@isSubmitting">
                                @if (isSubmitting)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                }
                                <i class="bi bi-check-circle"></i> Create Payment Transaction
                            </button>
                        </div>
                    </EditForm>

                    @if (successMessage != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                            <i class="bi bi-check-circle-fill"></i> @successMessage
                            <button type="button" class="btn-close" @onclick="@(() => successMessage = null)"></button>
                        </div>
                    }

                    @if (errorMessage != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                            <i class="bi bi-exclamation-triangle-fill"></i> @errorMessage
                            <button type="button" class="btn-close" @onclick="@(() => errorMessage = null)"></button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    [SupplyParameterFromQuery(Name = "invoiceId")]
    public int? InvoiceIdFromQuery { get; set; }

    private PaymentTransactionCommand transaction = new PaymentTransactionCommand
    {
        TransactionDate = DateTime.Today,
        Status = "Pending",
        WalletId = 1 // Default wallet ID
    };

    private List<PaymentMethodModel> paymentMethods = new();
    private List<InvoiceModel> invoices = new();
    private InvoiceModel? linkedInvoice = null;

    private bool paymentMethodsLoading = true;
    private bool invoicesLoading = true;
    private bool loadingInvoice = false;
    private bool isSubmitting = false;
    private bool fromInvoice = false;
    private string? successMessage;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        // Check if we have an invoice ID from query parameter
        if (InvoiceIdFromQuery.HasValue && InvoiceIdFromQuery.Value > 0)
        {
            fromInvoice = true;
            transaction.InvoiceId = InvoiceIdFromQuery.Value;
            await LoadLinkedInvoice(InvoiceIdFromQuery.Value);
        }

        await LoadDropdownData();
    }

    private async Task LoadLinkedInvoice(int invoiceId)
    {
        loadingInvoice = true;
        try
        {
            linkedInvoice = await Http.GetFromJsonAsync<InvoiceModel>($"api/Invoice/{invoiceId}");

            if (linkedInvoice != null)
            {
                // Pre-fill the amount from invoice
                transaction.Amount = linkedInvoice.TotalAmount;
                transaction.Description = $"Payment for Invoice {linkedInvoice.InvoiceNumber}";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading invoice: {ex.Message}";
            Console.WriteLine($"Error loading invoice: {ex.Message}");
        }
        finally
        {
            loadingInvoice = false;
        }
    }

    private async Task OnInvoiceChanged()
    {
        // Clear linked invoice info when no invoice is selected
        if (!transaction.InvoiceId.HasValue || transaction.InvoiceId.Value == 0)
        {
            linkedInvoice = null;
            // Optionally clear amount and description
            // transaction.Amount = 0;
            // transaction.Description = string.Empty;
            return;
        }

        // Load the selected invoice and update amount
        await LoadLinkedInvoice(transaction.InvoiceId.Value);
    }

    private async Task LoadDropdownData()
    {
        try
        {
            // Load payment methods
            paymentMethodsLoading = true;
            paymentMethods = await Http.GetFromJsonAsync<List<PaymentMethodModel>>("api/PaymentMethod") ?? new();
            paymentMethodsLoading = false;

            // Load invoices
            invoicesLoading = true;
            invoices = await Http.GetFromJsonAsync<List<InvoiceModel>>("api/Invoice") ?? new();
            invoicesLoading = false;
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading data: {ex.Message}";
            Console.WriteLine($"Error loading dropdown data: {ex.Message}");
        }
    }

    private async Task HandleValidSubmit()
    {
        if (transaction.PaymentMethodId == 0)
        {
            errorMessage = "Please select a payment method.";
            return;
        }

        isSubmitting = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            var command = new
            {
                Amount = transaction.Amount,
                TransactionDate = transaction.TransactionDate,
                Status = transaction.Status,
                WalletId = transaction.WalletId, // Always 1
                PaymentMethodId = transaction.PaymentMethodId,
                InvoiceId = transaction.InvoiceId,
                Reference = transaction.Reference,
                Description = transaction.Description
            };

            var response = await Http.PostAsJsonAsync("api/Payment/transaction", command);

            if (response.IsSuccessStatusCode)
            {
                successMessage = $"Payment transaction of ${transaction.Amount:F2} created successfully!";

                // Redirect after short delay
                await Task.Delay(1500);
                NavigationManager.NavigateTo("/payment/list");
            }
            else
            {
                var error = await response.Content.ReadAsStringAsync();
                errorMessage = $"Failed to create payment transaction: {response.StatusCode} - {error}";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error creating payment transaction: {ex.Message}";
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void GoToList()
    {
        NavigationManager.NavigateTo("/payment/list");
    }

    // DTO for the form
    public class PaymentTransactionCommand
    {
        public decimal Amount { get; set; }
        public DateTime TransactionDate { get; set; }
        public string Status { get; set; } = "Pending";
        public int WalletId { get; set; }
        public int PaymentMethodId { get; set; }
        public int? InvoiceId { get; set; }
        public string? Reference { get; set; }
        public string? Description { get; set; }
    }
}
