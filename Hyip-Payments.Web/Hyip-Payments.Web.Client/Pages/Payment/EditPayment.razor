@page "/payment/edit/{Id:int}"
@using Hyip_Payments.Models
@using System.Net.Http.Json
@inject HttpClient Http
@inject NavigationManager NavigationManager

<PageTitle>Edit Payment Transaction</PageTitle>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h3 class="mb-0"><i class="bi bi-pencil-square"></i> Edit Payment Transaction</h3>
                </div>
                <div class="card-body">
                    @if (isLoading)
                    {
                        <div class="text-center">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="mt-2">Loading payment transaction...</p>
                        </div>
                    }
                    else if (errorMessage != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle"></i> @errorMessage
                            <button type="button" class="btn-close" @onclick="@(() => errorMessage = null)"></button>
                        </div>
                        <button class="btn btn-secondary" @onclick="GoToList">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </button>
                    }
                    else if (transaction != null)
                    {
                        @if (linkedInvoice != null)
                        {
                            <div class="alert alert-info" role="alert">
                                <h6 class="alert-heading"><i class="bi bi-link-45deg"></i> Linked Invoice Information</h6>
                                <p class="mb-1"><strong>Invoice #:</strong> @linkedInvoice.InvoiceNumber</p>
                                <p class="mb-1"><strong>Date:</strong> @linkedInvoice.InvoiceDate.ToString("MMM dd, yyyy")</p>
                                <p class="mb-0"><strong>Amount:</strong> $@linkedInvoice.TotalAmount.ToString("F2")</p>
                            </div>
                        }

                        <EditForm Model="@transaction" OnValidSubmit="HandleValidSubmit">
                            <DataAnnotationsValidator />
                            <ValidationSummary class="alert alert-danger" />

                            <!-- Transaction Details -->
                            <div class="card mb-3">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Transaction Details</h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label for="amount" class="form-label fw-bold">Amount <span class="text-danger">*</span></label>
                                            <div class="input-group">
                                                <span class="input-group-text">$</span>
                                                <InputNumber id="amount" class="form-control" @bind-Value="transaction.Amount" placeholder="0.00" step="0.01" />
                                            </div>
                                            <ValidationMessage For="@(() => transaction.Amount)" />
                                        </div>

                                        <div class="col-md-6 mb-3">
                                            <label for="transactionDate" class="form-label fw-bold">Transaction Date <span class="text-danger">*</span></label>
                                            <InputDate id="transactionDate" class="form-control" @bind-Value="transaction.TransactionDate" />
                                            <ValidationMessage For="@(() => transaction.TransactionDate)" />
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label for="status" class="form-label fw-bold">Status <span class="text-danger">*</span></label>
                                            <InputSelect id="status" class="form-select" @bind-Value="transaction.Status">
                                                <option value="Pending">Pending</option>
                                                <option value="Completed">Completed</option>
                                                <option value="Failed">Failed</option>
                                                <option value="Cancelled">Cancelled</option>
                                            </InputSelect>
                                            <ValidationMessage For="@(() => transaction.Status)" />
                                        </div>

                                        <div class="col-md-6 mb-3">
                                            <label for="reference" class="form-label fw-bold">Reference / Transaction ID</label>
                                            <InputText id="reference" class="form-control" @bind-Value="transaction.Reference" placeholder="Optional reference number" />
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <label for="description" class="form-label fw-bold">Description</label>
                                        <InputTextArea id="description" class="form-control" @bind-Value="transaction.Description" rows="2" placeholder="Enter transaction description (optional)" />
                                    </div>
                                </div>
                            </div>

                            <!-- Payment Information -->
                            <div class="card mb-3">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0"><i class="bi bi-wallet2"></i> Payment Information</h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-12 mb-3">
                                            <label for="paymentMethodId" class="form-label fw-bold">Payment Method <span class="text-danger">*</span></label>
                                            @if (paymentMethodsLoading)
                                            {
                                                <div class="spinner-border spinner-border-sm" role="status"></div>
                                            }
                                            else
                                            {
                                                <InputSelect id="paymentMethodId" class="form-select" @bind-Value="transaction.PaymentMethodId">
                                                    <option value="0">-- Select Payment Method --</option>
                                                    @foreach (var method in paymentMethods)
                                                    {
                                                        <option value="@method.Id">@method.Name</option>
                                                    }
                                                </InputSelect>
                                                <ValidationMessage For="@(() => transaction.PaymentMethodId)" />
                                            }
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <label for="invoiceId" class="form-label fw-bold">Related Invoice (Optional)</label>
                                        @if (invoicesLoading)
                                        {
                                            <div class="spinner-border spinner-border-sm" role="status"></div>
                                        }
                                        else
                                        {
                                            <InputSelect id="invoiceId" class="form-select" @bind-Value="transaction.InvoiceId" @bind-Value:after="OnInvoiceChanged">
                                                <option value="">-- No Invoice --</option>
                                                @foreach (var invoice in invoices)
                                                {
                                                    <option value="@invoice.Id">@invoice.InvoiceNumber - $@invoice.TotalAmount.ToString("F2")</option>
                                                }
                                            </InputSelect>
                                        }
                                    </div>
                                </div>
                            </div>

                            <hr class="my-4" />

                            <div class="d-flex justify-content-between">
                                <button type="button" class="btn btn-secondary" @onclick="GoToList">
                                    <i class="bi bi-x-circle"></i> Cancel
                                </button>
                                <button type="submit" class="btn btn-warning btn-lg" disabled="@isSubmitting">
                                    @if (isSubmitting)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                    }
                                    <i class="bi bi-check-circle"></i> Update Payment Transaction
                                </button>
                            </div>
                        </EditForm>

                        @if (successMessage != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                                <i class="bi bi-check-circle-fill"></i> @successMessage
                                <button type="button" class="btn-close" @onclick="@(() => successMessage = null)"></button>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private PaymentTransactionModel? transaction;
    private List<PaymentMethodModel> paymentMethods = new();
    private List<InvoiceModel> invoices = new();
    private InvoiceModel? linkedInvoice = null;

    private bool isLoading = true;
    private bool paymentMethodsLoading = true;
    private bool invoicesLoading = true;
    private bool isSubmitting = false;
    private string? successMessage;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadPaymentTransaction();
        await LoadDropdownData();
    }

    private async Task LoadPaymentTransaction()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            transaction = await Http.GetFromJsonAsync<PaymentTransactionModel>($"api/Payment/transaction/{Id}");

            if (transaction == null)
            {
                errorMessage = "Payment transaction not found.";
                return;
            }

            // Load linked invoice if exists
            if (transaction.InvoiceId.HasValue)
            {
                await LoadLinkedInvoice(transaction.InvoiceId.Value);
            }
        }
        catch (HttpRequestException httpEx)
        {
            errorMessage = $"Network error: {httpEx.Message}. Please check if the API is running.";
            Console.WriteLine($"HTTP Error: {httpEx.Message}");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading payment transaction: {ex.Message}";
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task LoadLinkedInvoice(int invoiceId)
    {
        try
        {
            linkedInvoice = await Http.GetFromJsonAsync<InvoiceModel>($"api/Invoice/{invoiceId}");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading linked invoice: {ex.Message}");
        }
    }

    private async Task LoadDropdownData()
    {
        try
        {
            // Load payment methods
            paymentMethodsLoading = true;
            paymentMethods = await Http.GetFromJsonAsync<List<PaymentMethodModel>>("api/PaymentMethod") ?? new();
            paymentMethodsLoading = false;

            // Load invoices
            invoicesLoading = true;
            invoices = await Http.GetFromJsonAsync<List<InvoiceModel>>("api/Invoice") ?? new();
            invoicesLoading = false;
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading data: {ex.Message}";
            Console.WriteLine($"Error loading dropdown data: {ex.Message}");
        }
    }

    private async Task OnInvoiceChanged()
    {
        if (transaction?.InvoiceId.HasValue == true && transaction.InvoiceId.Value > 0)
        {
            await LoadLinkedInvoice(transaction.InvoiceId.Value);
        }
        else
        {
            linkedInvoice = null;
        }
    }

    private async Task HandleValidSubmit()
    {
        if (transaction == null) return;

        if (transaction.PaymentMethodId == 0)
        {
            errorMessage = "Please select a payment method.";
            return;
        }

        isSubmitting = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            var command = new
            {
                Id = transaction.Id,
                Amount = transaction.Amount,
                TransactionDate = transaction.TransactionDate,
                Status = transaction.Status,
                WalletId = transaction.WalletId,
                PaymentMethodId = transaction.PaymentMethodId,
                InvoiceId = transaction.InvoiceId,
                Reference = transaction.Reference,
                Description = transaction.Description
            };

            var response = await Http.PutAsJsonAsync($"api/Payment/transaction/{Id}", command);

            if (response.IsSuccessStatusCode)
            {
                successMessage = $"Payment transaction updated successfully!";

                // Redirect after short delay
                await Task.Delay(1500);
                NavigationManager.NavigateTo("/payment/list");
            }
            else
            {
                var error = await response.Content.ReadAsStringAsync();
                errorMessage = $"Failed to update payment transaction: {response.StatusCode} - {error}";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error updating payment transaction: {ex.Message}";
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void GoToList()
    {
        NavigationManager.NavigateTo("/payment/list");
    }
}
