@page "/paymentmethod/edit/{Id:int}"
@using Hyip_Payments.Models
@using System.Net.Http.Json
@inject HttpClient Http
@inject NavigationManager NavigationManager

<PageTitle>Edit Payment Method</PageTitle>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h3 class="mb-0"><i class="bi bi-pencil-square"></i> Edit Payment Method</h3>
                </div>
                <div class="card-body">
                    @if (isLoading)
                    {
                        <div class="text-center">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                            <p class="mt-2">Loading payment method...</p>
                        </div>
                    }
                    else if (errorMessage != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="bi bi-exclamation-triangle"></i> @errorMessage
                            <button type="button" class="btn-close" @onclick="@(() => errorMessage = null)"></button>
                        </div>
                        <button class="btn btn-secondary" @onclick="GoToList">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </button>
                    }
                    else if (paymentMethod != null)
                    {
                        <EditForm Model="@paymentMethod" OnValidSubmit="HandleValidSubmit">
                            <DataAnnotationsValidator />
                            <ValidationSummary class="alert alert-danger" />

                            <div class="mb-3">
                                <label for="name" class="form-label fw-bold">Payment Method Name <span class="text-danger">*</span></label>
                                <InputText id="name" class="form-control" @bind-Value="paymentMethod.Name" placeholder="e.g., Credit Card, PayPal" />
                                <ValidationMessage For="@(() => paymentMethod.Name)" />
                            </div>

                            <div class="mb-3">
                                <label for="description" class="form-label fw-bold">Description</label>
                                <InputTextArea id="description" class="form-control" @bind-Value="paymentMethod.Description" rows="3" placeholder="Enter description (optional)" />
                                <ValidationMessage For="@(() => paymentMethod.Description)" />
                            </div>

                            <div class="mb-3 form-check">
                                <InputCheckbox id="isActive" class="form-check-input" @bind-Value="paymentMethod.IsActive" />
                                <label for="isActive" class="form-check-label fw-bold">Is Active</label>
                            </div>

                            <hr class="my-4" />

                            <div class="d-flex justify-content-between">
                                <button type="button" class="btn btn-secondary" @onclick="GoToList">
                                    <i class="bi bi-x-circle"></i> Cancel
                                </button>
                                <button type="submit" class="btn btn-warning" disabled="@isSubmitting">
                                    @if (isSubmitting)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                    }
                                    <i class="bi bi-check-circle"></i> Update Payment Method
                                </button>
                            </div>
                        </EditForm>

                        @if (successMessage != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                                <i class="bi bi-check-circle-fill"></i> @successMessage
                                <button type="button" class="btn-close" @onclick="@(() => successMessage = null)"></button>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public int Id { get; set; }

    private PaymentMethodModel? paymentMethod;
    private bool isLoading = true;
    private bool isSubmitting = false;
    private string? errorMessage;
    private string? successMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadPaymentMethod();
    }

    private async Task LoadPaymentMethod()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            paymentMethod = await Http.GetFromJsonAsync<PaymentMethodModel>($"api/PaymentMethod/{Id}");
            
            if (paymentMethod == null)
            {
                errorMessage = "Payment method not found.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading payment method: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task HandleValidSubmit()
    {
        if (paymentMethod == null) return;

        isSubmitting = true;
        errorMessage = null;
        successMessage = null;

        try
        {
            paymentMethod.Id = Id;
            var response = await Http.PutAsJsonAsync($"api/PaymentMethod/{Id}", paymentMethod);

            if (response.IsSuccessStatusCode)
            {
                successMessage = $"Payment method '{paymentMethod.Name}' updated successfully!";
                
                await Task.Delay(1500);
                NavigationManager.NavigateTo("/paymentmethod/list");
            }
            else
            {
                var error = await response.Content.ReadAsStringAsync();
                errorMessage = $"Failed to update payment method: {response.StatusCode} - {error}";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error updating payment method: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void GoToList()
    {
        NavigationManager.NavigateTo("/paymentmethod/list");
    }
}
