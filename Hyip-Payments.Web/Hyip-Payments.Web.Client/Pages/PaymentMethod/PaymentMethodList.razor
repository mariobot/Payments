@page "/paymentmethod/list"
@using Hyip_Payments.Models
@using System.Net.Http.Json
@inject HttpClient Http
@inject NavigationManager NavigationManager

<PageTitle>Payment Methods</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3><i class="bi bi-credit-card-2-front"></i> Payment Methods</h3>
        <button class="btn btn-primary" @onclick="GoToAdd">
            <i class="bi bi-plus-circle"></i> Add New Payment Method
        </button>
    </div>

    @if (isLoading)
    {
        <div class="text-center">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2">Loading payment methods...</p>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @errorMessage
            <button type="button" class="btn-close" @onclick="@(() => errorMessage = null)"></button>
        </div>
        <button class="btn btn-primary" @onclick="LoadPaymentMethods">
            <i class="bi bi-arrow-clockwise"></i> Retry
        </button>
    }
    else if (paymentMethods != null && paymentMethods.Count > 0)
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Status</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var method in paymentMethods)
                            {
                                <tr>
                                    <td><strong>@method.Name</strong></td>
                                    <td>@(string.IsNullOrEmpty(method.Description) ? "-" : method.Description)</td>
                                    <td>
                                        @if (method.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <button class="btn btn-sm btn-warning" @onclick="() => GoToEdit(method.Id)" title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <button class="btn btn-sm btn-danger" @onclick="() => ConfirmDelete(method.Id, method.Name)" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="mt-3">
                    <p class="text-muted mb-0">
                        <i class="bi bi-info-circle"></i> Total: <strong>@paymentMethods.Count</strong> payment method(s)
                    </p>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No payment methods found. Click "Add New Payment Method" to create one.
        </div>
    }

    <!-- Delete Confirmation Modal -->
    @if (showDeleteConfirm)
    {
        <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header bg-danger text-white">
                        <h5 class="modal-title"><i class="bi bi-exclamation-triangle"></i> Confirm Delete</h5>
                        <button type="button" class="btn-close btn-close-white" @onclick="CancelDelete"></button>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure you want to delete the payment method <strong>@methodToDeleteName</strong>?</p>
                        <p class="text-danger"><strong>This action cannot be undone.</strong></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CancelDelete">Cancel</button>
                        <button type="button" class="btn btn-danger" @onclick="DeletePaymentMethod">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<PaymentMethodModel> paymentMethods = new();
    private bool isLoading = true;
    private string? errorMessage;
    private bool showDeleteConfirm = false;
    private int methodToDelete = 0;
    private string methodToDeleteName = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadPaymentMethods();
    }

    private async Task LoadPaymentMethods()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            paymentMethods = await Http.GetFromJsonAsync<List<PaymentMethodModel>>("api/PaymentMethod") ?? new();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading payment methods: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void GoToAdd()
    {
        NavigationManager.NavigateTo("/paymentmethod/add");
    }

    private void GoToEdit(int id)
    {
        NavigationManager.NavigateTo($"/paymentmethod/edit/{id}");
    }

    private void ConfirmDelete(int id, string name)
    {
        methodToDelete = id;
        methodToDeleteName = name;
        showDeleteConfirm = true;
    }

    private void CancelDelete()
    {
        methodToDelete = 0;
        methodToDeleteName = string.Empty;
        showDeleteConfirm = false;
    }

    private async Task DeletePaymentMethod()
    {
        showDeleteConfirm = false;

        try
        {
            var response = await Http.DeleteAsync($"api/PaymentMethod/{methodToDelete}");

            if (response.IsSuccessStatusCode)
            {
                paymentMethods.RemoveAll(m => m.Id == methodToDelete);
                StateHasChanged();
            }
            else
            {
                errorMessage = $"Failed to delete payment method: {response.ReasonPhrase}";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error deleting payment method: {ex.Message}";
        }
        finally
        {
            methodToDelete = 0;
            methodToDeleteName = string.Empty;
        }
    }
}
