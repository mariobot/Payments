@page "/reports/custom/saved"
@using Hyip_Payments.Models
@using System.Net.Http.Json
@inject HttpClient Http
@inject NavigationManager Navigation

<PageTitle>Saved Custom Reports - HYIP Payments</PageTitle>

<div class="container mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/reports">Reports</a></li>
                    <li class="breadcrumb-item active">Saved Custom Reports</li>
                </ol>
            </nav>
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2><i class="bi bi-folder-open text-primary"></i> Saved Custom Reports</h2>
                    <p class="text-muted">Manage and run your custom report configurations</p>
                </div>
                <button class="btn btn-primary" @onclick="CreateNewReport">
                    <i class="bi bi-plus-circle"></i> Create New Report
                </button>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center my-5">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3">Loading saved reports...</p>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            <strong>Error!</strong> @errorMessage
            <button type="button" class="btn-close" @onclick="@(() => errorMessage = null)"></button>
        </div>
        <button class="btn btn-primary" @onclick="LoadSavedReports">
            <i class="bi bi-arrow-clockwise"></i> Retry
        </button>
    }
    else if (savedReports.Any())
    {
        <!-- Report Grid -->
        <div class="row">
            @foreach (var report in savedReports)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-header @GetReportTypeClass(report.ReportType)">
                            <div class="d-flex justify-content-between align-items-center">
                                <h6 class="mb-0">
                                    <i class="@GetReportTypeIcon(report.ReportType)"></i> @report.ReportType Report
                                </h6>
                                @if (report.IsPublic)
                                {
                                    <span class="badge bg-light text-dark"><i class="bi bi-globe"></i> Public</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary"><i class="bi bi-lock-fill"></i> Private</span>
                                }
                            </div>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">@report.ReportName</h5>
                            <p class="card-text text-muted small">
                                @(string.IsNullOrEmpty(report.Description) ? "No description provided" : report.Description)
                            </p>
                            <dl class="row small mb-2">
                                <dt class="col-sm-5">Created:</dt>
                                <dd class="col-sm-7">@report.CreatedDate.ToString("MMM dd, yyyy")</dd>

                                <dt class="col-sm-5">Last Run:</dt>
                                <dd class="col-sm-7">
                                    @if (report.LastRunDate.HasValue)
                                    {
                                        @report.LastRunDate.Value.ToString("MMM dd, yyyy")
                                    }
                                    else
                                    {
                                        <span class="text-muted">Never</span>
                                    }
                                </dd>

                                <dt class="col-sm-5">Run Count:</dt>
                                <dd class="col-sm-7">@report.RunCount times</dd>
                            </dl>
                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="btn-group w-100" role="group">
                                <button class="btn btn-sm btn-success" @onclick="() => RunReport(report.Id)">
                                    <i class="bi bi-play-fill"></i> Run
                                </button>
                                <button class="btn btn-sm btn-primary" @onclick="() => EditReport(report.Id)">
                                    <i class="bi bi-pencil"></i> Edit
                                </button>
                                <button class="btn btn-sm btn-danger" @onclick="() => ConfirmDelete(report.Id, report.ReportName)">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <!-- Empty State -->
        <div class="card text-center py-5">
            <div class="card-body">
                <i class="bi bi-folder-x display-1 text-muted"></i>
                <h4 class="mt-3">No Saved Reports Yet</h4>
                <p class="text-muted">Create your first custom report to get started</p>
                <button class="btn btn-primary btn-lg mt-3" @onclick="CreateNewReport">
                    <i class="bi bi-plus-circle"></i> Create Your First Report
                </button>
            </div>
        </div>
    }

    <!-- Delete Confirmation Modal -->
    @if (showDeleteModal)
    {
        <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header bg-danger text-white">
                        <h5 class="modal-title"><i class="bi bi-exclamation-triangle"></i> Confirm Delete</h5>
                        <button type="button" class="btn-close btn-close-white" @onclick="CancelDelete"></button>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure you want to delete the report <strong>@reportToDeleteName</strong>?</p>
                        <p class="text-danger"><strong>This action cannot be undone.</strong></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CancelDelete">Cancel</button>
                        <button type="button" class="btn btn-danger" @onclick="DeleteReport">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<CustomReportModel> savedReports = new();
    private bool isLoading = true;
    private string? errorMessage;
    private bool showDeleteModal = false;
    private int reportToDelete = 0;
    private string reportToDeleteName = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadSavedReports();
    }

    private async Task LoadSavedReports()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            savedReports = await Http.GetFromJsonAsync<List<CustomReportModel>>("api/CustomReport") ?? new();
        }
        catch (HttpRequestException httpEx)
        {
            errorMessage = $"Network error: {httpEx.Message}. Please check if the API is running.";
            Console.WriteLine($"HTTP Error: {httpEx.Message}");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading saved reports: {ex.Message}";
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void CreateNewReport()
    {
        Navigation.NavigateTo("/reports/custom/create");
    }

    private void RunReport(int reportId)
    {
        Navigation.NavigateTo($"/reports/custom/view/{reportId}");
    }

    private void EditReport(int reportId)
    {
        Navigation.NavigateTo($"/reports/custom/edit/{reportId}");
    }

    private void ConfirmDelete(int reportId, string reportName)
    {
        reportToDelete = reportId;
        reportToDeleteName = reportName;
        showDeleteModal = true;
    }

    private void CancelDelete()
    {
        reportToDelete = 0;
        reportToDeleteName = string.Empty;
        showDeleteModal = false;
    }

    private async Task DeleteReport()
    {
        showDeleteModal = false;

        try
        {
            var response = await Http.DeleteAsync($"api/CustomReport/{reportToDelete}");

            if (response.IsSuccessStatusCode)
            {
                // Remove from local list
                savedReports.RemoveAll(r => r.Id == reportToDelete);
                StateHasChanged();
            }
            else
            {
                var errorContent = await response.Content.ReadAsStringAsync();
                errorMessage = $"Failed to delete report: {response.ReasonPhrase}. {errorContent}";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error deleting report: {ex.Message}";
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            reportToDelete = 0;
            reportToDeleteName = string.Empty;
        }
    }

    private string GetReportTypeClass(string type)
    {
        return type switch
        {
            "Financial" => "bg-success text-white",
            "Invoice" => "bg-info text-white",
            "Payment" => "bg-primary text-white",
            "User" => "bg-warning text-dark",
            "Product" => "bg-secondary text-white",
            _ => "bg-secondary text-white"
        };
    }

    private string GetReportTypeIcon(string type)
    {
        return type switch
        {
            "Financial" => "bi bi-cash-stack",
            "Invoice" => "bi bi-file-earmark-text",
            "Payment" => "bi bi-credit-card",
            "User" => "bi bi-people",
            "Product" => "bi bi-box-seam",
            _ => "bi bi-file-text"
        };
    }
}
