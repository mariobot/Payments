@page "/reports/revenue"
@using Hyip_Payments.Models.Reports
@inject HttpClient Http

<PageTitle>Revenue Report - HYIP Payments</PageTitle>

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="bi bi-graph-up-arrow"></i> Revenue Report</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/reports">Reports</a></li>
                    <li class="breadcrumb-item active">Revenue</li>
                </ol>
            </nav>
        </div>
    </div>

    <!-- Date Range Filter -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-funnel"></i> Filter Options</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <label class="form-label fw-bold">Start Date</label>
                    <input type="date" class="form-control" @bind="startDate" />
                </div>
                <div class="col-md-4">
                    <label class="form-label fw-bold">End Date</label>
                    <input type="date" class="form-control" @bind="endDate" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">&nbsp;</label>
                    <button class="btn btn-primary w-100" @onclick="LoadReport" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        <i class="bi bi-search"></i> Generate Report
                    </button>
                </div>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center my-5">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3">Loading revenue data...</p>
        </div>
    }
    else if (reportData != null)
    {
        <!-- Summary Cards -->
        <div class="row mb-4">
            <div class="col-md-4 mb-3">
                <div class="card border-success shadow-sm">
                    <div class="card-body">
                        <h6 class="text-muted mb-2">Total Revenue</h6>
                        <h2 class="text-success mb-0">$@reportData.TotalRevenue.ToString("N2")</h2>
                        <small class="text-muted">@((reportData.EndDate - reportData.StartDate).Days) days</small>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card border-primary shadow-sm">
                    <div class="card-body">
                        <h6 class="text-muted mb-2">Total Transactions</h6>
                        <h2 class="text-primary mb-0">@reportData.TotalTransactions</h2>
                        <small class="text-muted">Completed payments</small>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card border-info shadow-sm">
                    <div class="card-body">
                        <h6 class="text-muted mb-2">Average Transaction</h6>
                        <h2 class="text-info mb-0">$@reportData.AverageTransactionValue.ToString("N2")</h2>
                        <small class="text-muted">Per transaction</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Revenue by Date Table -->
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="bi bi-calendar3"></i> Revenue by Date</h5>
            </div>
            <div class="card-body">
                @if (reportData.RevenueByDate.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Date</th>
                                    <th class="text-end">Transactions</th>
                                    <th class="text-end">Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in reportData.RevenueByDate)
                                {
                                    <tr>
                                        <td>@item.Date.ToString("MMM dd, yyyy")</td>
                                        <td class="text-end">@item.TransactionCount</td>
                                        <td class="text-end text-success fw-bold">$@item.TotalAmount.ToString("N2")</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="table-secondary">
                                <tr>
                                    <td><strong>Total</strong></td>
                                    <td class="text-end"><strong>@reportData.TotalTransactions</strong></td>
                                    <td class="text-end"><strong>$@reportData.TotalRevenue.ToString("N2")</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info mb-0">
                        <i class="bi bi-info-circle"></i> No revenue data for the selected date range.
                    </div>
                }
            </div>
        </div>

        <!-- Revenue by Payment Method -->
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="bi bi-credit-card"></i> Revenue by Payment Method</h5>
            </div>
            <div class="card-body">
                @if (reportData.RevenueByPaymentMethod.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Payment Method</th>
                                    <th class="text-end">Transactions</th>
                                    <th class="text-end">Amount</th>
                                    <th class="text-end">Percentage</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var method in reportData.RevenueByPaymentMethod.OrderByDescending(m => m.TotalAmount))
                                {
                                    <tr>
                                        <td><strong>@method.PaymentMethodName</strong></td>
                                        <td class="text-end">@method.TransactionCount</td>
                                        <td class="text-end text-success fw-bold">$@method.TotalAmount.ToString("N2")</td>
                                        <td class="text-end">
                                            <span class="badge bg-info">@method.Percentage.ToString("N1")%</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Visual Percentage Bars -->
                    <div class="mt-3">
                        <h6>Distribution</h6>
                        @foreach (var method in reportData.RevenueByPaymentMethod.OrderByDescending(m => m.TotalAmount))
                        {
                            <div class="mb-2">
                                <div class="d-flex justify-content-between mb-1">
                                    <small>@method.PaymentMethodName</small>
                                    <small>@method.Percentage.ToString("N1")%</small>
                                </div>
                                <div class="progress">
                                    <div class="progress-bar bg-success" role="progressbar" 
                                         style="width: @method.Percentage%" 
                                         aria-valuenow="@method.Percentage" 
                                         aria-valuemin="0" 
                                         aria-valuemax="100">
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-info mb-0">
                        <i class="bi bi-info-circle"></i> No payment method data available.
                    </div>
                }
            </div>
        </div>

        <!-- Export Buttons -->
        <div class="card">
            <div class="card-body">
                <h5 class="mb-3"><i class="bi bi-download"></i> Export Report</h5>
                <button class="btn btn-danger me-2" disabled>
                    <i class="bi bi-file-pdf"></i> Export to PDF
                </button>
                <button class="btn btn-success me-2" disabled>
                    <i class="bi bi-file-excel"></i> Export to Excel
                </button>
                <button class="btn btn-info" disabled>
                    <i class="bi bi-file-earmark-spreadsheet"></i> Export to CSV
                </button>
                <p class="text-muted mt-2 mb-0"><small><i class="bi bi-info-circle"></i> Export functionality coming soon</small></p>
            </div>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle"></i> @errorMessage
        </div>
        <button class="btn btn-primary" @onclick="LoadReport">
            <i class="bi bi-arrow-clockwise"></i> Retry
        </button>
    }
</div>

@code {
    private DateTime startDate = DateTime.Now.AddMonths(-1).Date;
    private DateTime endDate = DateTime.Now.Date;
    private bool isLoading = false;
    private RevenueReportModel? reportData;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        // Load report with default date range
        await LoadReport();
    }

    private async Task LoadReport()
    {
        isLoading = true;
        errorMessage = null;
        reportData = null;

        try
        {
            var url = $"api/FinancialReport/revenue?startDate={startDate:yyyy-MM-dd}&endDate={endDate:yyyy-MM-dd}";
            reportData = await Http.GetFromJsonAsync<RevenueReportModel>(url);
        }
        catch (HttpRequestException httpEx)
        {
            errorMessage = $"Network error: {httpEx.Message}. Please check if the API is running.";
            Console.WriteLine($"HTTP Error: {httpEx.Message}");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading revenue report: {ex.Message}";
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }
}
