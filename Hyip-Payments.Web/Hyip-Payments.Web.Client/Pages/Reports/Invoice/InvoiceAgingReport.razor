@page "/reports/invoice-aging"
@using Hyip_Payments.Models.Reports
@inject HttpClient Http

<PageTitle>Invoice Aging Report - HYIP Payments</PageTitle>

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="bi bi-clock-history"></i> Invoice Aging Report</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/reports">Reports</a></li>
                    <li class="breadcrumb-item active">Invoice Aging</li>
                </ol>
            </nav>
        </div>
    </div>

    <!-- Report Date Filter -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-calendar-check"></i> Report Date</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <label class="form-label fw-bold">As of Date</label>
                    <input type="date" class="form-control" @bind="reportDate" />
                    <small class="form-text text-muted">Aging is calculated from this date</small>
                </div>
                <div class="col-md-6">
                    <label class="form-label">&nbsp;</label>
                    <button class="btn btn-primary w-100" @onclick="LoadReport" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        <i class="bi bi-search"></i> Generate Report
                    </button>
                </div>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center my-5">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3">Loading invoice aging data...</p>
        </div>
    }
    else if (reportData != null)
    {
        <!-- Summary Cards -->
        <div class="row mb-4">
            <div class="col-md-3 mb-3">
                <div class="card border-warning shadow-sm">
                    <div class="card-body">
                        <h6 class="text-muted mb-2">Total Unpaid Invoices</h6>
                        <h2 class="text-warning mb-0">@reportData.TotalUnpaidInvoices</h2>
                        <small class="text-muted">As of @reportData.ReportDate.ToString("MMM dd, yyyy")</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card border-danger shadow-sm">
                    <div class="card-body">
                        <h6 class="text-muted mb-2">Total Unpaid Amount</h6>
                        <h2 class="text-danger mb-0">$@reportData.TotalUnpaidAmount.ToString("N2")</h2>
                        <small class="text-muted">Outstanding balance</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card border-info shadow-sm">
                    <div class="card-body">
                        <h6 class="text-muted mb-2">Average Age</h6>
                        <h2 class="text-info mb-0">@reportData.Summary.AverageAgeDays.ToString("N0") days</h2>
                        <small class="text-muted">Average days old</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card border-danger shadow-sm">
                    <div class="card-body">
                        <h6 class="text-muted mb-2">Oldest Invoice</h6>
                        <h2 class="text-danger mb-0">@reportData.Summary.OldestInvoiceDays.ToString("N0") days</h2>
                        <small class="text-muted">Days overdue</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Aging Bucket Summary Cards -->
        <div class="row mb-4">
            <div class="col-md-3 mb-3">
                <div class="card border-success shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-check-circle text-success" style="font-size: 2rem;"></i>
                        <h6 class="text-muted mb-1 mt-2">Current (0-30 days)</h6>
                        <h4 class="mb-1">@reportData.Summary.Current0To30Count</h4>
                        <small class="text-muted">$@reportData.Summary.Current0To30Amount.ToString("N2")</small>
                        <p class="mb-0 mt-2">
                            <span class="badge bg-success">Low Risk</span>
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card border-warning shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-exclamation-triangle text-warning" style="font-size: 2rem;"></i>
                        <h6 class="text-muted mb-1 mt-2">31-60 days</h6>
                        <h4 class="mb-1">@reportData.Summary.Days31To60Count</h4>
                        <small class="text-muted">$@reportData.Summary.Days31To60Amount.ToString("N2")</small>
                        <p class="mb-0 mt-2">
                            <span class="badge bg-warning text-dark">Medium Risk</span>
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card border-danger shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-exclamation-circle text-danger" style="font-size: 2rem;"></i>
                        <h6 class="text-muted mb-1 mt-2">61-90 days</h6>
                        <h4 class="mb-1">@reportData.Summary.Days61To90Count</h4>
                        <small class="text-muted">$@reportData.Summary.Days61To90Amount.ToString("N2")</small>
                        <p class="mb-0 mt-2">
                            <span class="badge bg-danger">High Risk</span>
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card border-dark shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-x-octagon text-dark" style="font-size: 2rem;"></i>
                        <h6 class="text-muted mb-1 mt-2">Over 90 days</h6>
                        <h4 class="mb-1">@reportData.Summary.Over90DaysCount</h4>
                        <small class="text-muted">$@reportData.Summary.Over90DaysAmount.ToString("N2")</small>
                        <p class="mb-0 mt-2">
                            <span class="badge bg-dark">Critical</span>
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Aging Buckets Table -->
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="bi bi-list-ol"></i> Aging Analysis by Bucket</h5>
            </div>
            <div class="card-body">
                @if (reportData.AgingBuckets.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Aging Bucket</th>
                                    <th class="text-end">Invoice Count</th>
                                    <th class="text-end">Total Amount</th>
                                    <th class="text-end">Percentage</th>
                                    <th class="text-center">Risk Level</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var bucket in reportData.AgingBuckets)
                                {
                                    <tr>
                                        <td><strong>@bucket.BucketName</strong></td>
                                        <td class="text-end">@bucket.InvoiceCount</td>
                                        <td class="text-end text-danger fw-bold">$@bucket.TotalAmount.ToString("N2")</td>
                                        <td class="text-end">
                                            <span class="badge bg-info">@bucket.Percentage.ToString("N1")%</span>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge @GetRiskBadgeColor(bucket.RiskLevel)">
                                                @bucket.RiskLevel
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="table-secondary">
                                <tr>
                                    <td><strong>Total</strong></td>
                                    <td class="text-end"><strong>@reportData.TotalUnpaidInvoices</strong></td>
                                    <td class="text-end"><strong>$@reportData.TotalUnpaidAmount.ToString("N2")</strong></td>
                                    <td class="text-end"><strong>100.0%</strong></td>
                                    <td></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>

                    <!-- Visual Distribution -->
                    <div class="mt-3">
                        <h6>Aging Distribution</h6>
                        @foreach (var bucket in reportData.AgingBuckets.Where(b => b.Percentage > 0))
                        {
                            <div class="mb-2">
                                <div class="d-flex justify-content-between mb-1">
                                    <small><strong>@bucket.BucketName</strong> - @bucket.InvoiceCount invoice(s)</small>
                                    <small>@bucket.Percentage.ToString("N1")%</small>
                                </div>
                                <div class="progress">
                                    <div class="progress-bar @GetRiskProgressBarColor(bucket.RiskLevel)" 
                                         role="progressbar" 
                                         style="width: @bucket.Percentage%" 
                                         aria-valuenow="@bucket.Percentage" 
                                         aria-valuemin="0" 
                                         aria-valuemax="100">
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-success mb-0">
                        <i class="bi bi-check-circle"></i> Excellent! No unpaid invoices found.
                    </div>
                }
            </div>
        </div>

        <!-- Detailed Invoice List -->
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="bi bi-file-earmark-text"></i> Unpaid Invoices Detail</h5>
            </div>
            <div class="card-body">
                @if (reportData.AgingDetails.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover table-sm">
                            <thead class="table-light">
                                <tr>
                                    <th>Invoice #</th>
                                    <th>Invoice Date</th>
                                    <th class="text-end">Days Old</th>
                                    <th class="text-end">Amount</th>
                                    <th>Status</th>
                                    <th>Aging Bucket</th>
                                    <th class="text-center">Risk</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var invoice in reportData.AgingDetails)
                                {
                                    <tr class="@GetRowClass(invoice.RiskLevel)">
                                        <td><strong>@invoice.InvoiceNumber</strong></td>
                                        <td>@invoice.InvoiceDate.ToString("MMM dd, yyyy")</td>
                                        <td class="text-end">
                                            <span class="badge @GetDaysBadgeColor(invoice.DaysOld)">
                                                @invoice.DaysOld days
                                            </span>
                                        </td>
                                        <td class="text-end text-danger fw-bold">$@invoice.Amount.ToString("N2")</td>
                                        <td>
                                            <span class="badge @GetStatusBadge(invoice.Status)">
                                                @invoice.Status
                                            </span>
                                        </td>
                                        <td><small>@invoice.AgingBucket</small></td>
                                        <td class="text-center">
                                            <span class="badge @GetRiskBadgeColor(invoice.RiskLevel)">
                                                @invoice.RiskLevel
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <a href="/invoice/view/@invoice.InvoiceId" class="btn btn-sm btn-info" title="View Invoice">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-success mb-0">
                        <i class="bi bi-check-circle"></i> No unpaid invoices to display.
                    </div>
                }
            </div>
        </div>

        <!-- Export Buttons -->
        <div class="card">
            <div class="card-body">
                <h5 class="mb-3"><i class="bi bi-download"></i> Export Report</h5>
                <button class="btn btn-danger me-2" disabled>
                    <i class="bi bi-file-pdf"></i> Export to PDF
                </button>
                <button class="btn btn-success me-2" disabled>
                    <i class="bi bi-file-excel"></i> Export to Excel
                </button>
                <button class="btn btn-info" disabled>
                    <i class="bi bi-file-earmark-spreadsheet"></i> Export to CSV
                </button>
                <p class="text-muted mt-2 mb-0"><small><i class="bi bi-info-circle"></i> Export functionality coming soon</small></p>
            </div>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle"></i> @errorMessage
        </div>
        <button class="btn btn-primary" @onclick="LoadReport">
            <i class="bi bi-arrow-clockwise"></i> Retry
        </button>
    }
</div>

@code {
    private DateTime reportDate = DateTime.Today;
    private bool isLoading = false;
    private InvoiceAgingReportModel? reportData;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        // Load report with today's date
        await LoadReport();
    }

    private async Task LoadReport()
    {
        isLoading = true;
        errorMessage = null;
        reportData = null;

        try
        {
            var url = $"api/InvoiceReport/aging?reportDate={reportDate:yyyy-MM-dd}";
            reportData = await Http.GetFromJsonAsync<InvoiceAgingReportModel>(url);
        }
        catch (HttpRequestException httpEx)
        {
            errorMessage = $"Network error: {httpEx.Message}. Please check if the API is running.";
            Console.WriteLine($"HTTP Error: {httpEx.Message}");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading invoice aging report: {ex.Message}";
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private string GetRiskBadgeColor(string riskLevel)
    {
        return riskLevel switch
        {
            "Low" => "bg-success",
            "Medium" => "bg-warning text-dark",
            "High" => "bg-danger",
            "Critical" => "bg-dark",
            _ => "bg-secondary"
        };
    }

    private string GetRiskProgressBarColor(string riskLevel)
    {
        return riskLevel switch
        {
            "Low" => "bg-success",
            "Medium" => "bg-warning",
            "High" => "bg-danger",
            "Critical" => "bg-dark",
            _ => "bg-secondary"
        };
    }

    private string GetDaysBadgeColor(int daysOld)
    {
        return daysOld switch
        {
            <= 30 => "bg-success",
            <= 60 => "bg-warning text-dark",
            <= 90 => "bg-danger",
            _ => "bg-dark"
        };
    }

    private string GetRowClass(string riskLevel)
    {
        return riskLevel switch
        {
            "Critical" => "table-danger",
            "High" => "table-warning",
            _ => ""
        };
    }

    private string GetStatusBadge(string status)
    {
        return status switch
        {
            "Draft" => "bg-secondary",
            "Pending" => "bg-warning text-dark",
            "Paid" => "bg-success",
            "Cancelled" => "bg-danger",
            _ => "bg-light text-dark"
        };
    }
}
