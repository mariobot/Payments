@page "/reports/payment-summary"
@using Hyip_Payments.Models.Reports
@inject HttpClient Http

<PageTitle>Payment Summary Report - HYIP Payments</PageTitle>

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="bi bi-credit-card"></i> Payment Summary Report</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/reports">Reports</a></li>
                    <li class="breadcrumb-item active">Payment Summary</li>
                </ol>
            </nav>
        </div>
    </div>

    <!-- Date Range Filter -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-funnel"></i> Filter Options</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <label class="form-label fw-bold">Start Date</label>
                    <input type="date" class="form-control" @bind="startDate" />
                </div>
                <div class="col-md-4">
                    <label class="form-label fw-bold">End Date</label>
                    <input type="date" class="form-control" @bind="endDate" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">&nbsp;</label>
                    <button class="btn btn-primary w-100" @onclick="LoadReport" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        <i class="bi bi-search"></i> Generate Report
                    </button>
                </div>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center my-5">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3">Loading payment data...</p>
        </div>
    }
    else if (reportData != null)
    {
        <!-- Summary Cards -->
        <div class="row mb-4">
            <div class="col-md-3 mb-3">
                <div class="card border-primary shadow-sm">
                    <div class="card-body">
                        <h6 class="text-muted mb-2">Total Payments</h6>
                        <h2 class="text-primary mb-0">@reportData.TotalPayments</h2>
                        <small class="text-muted">@((reportData.EndDate - reportData.StartDate).Days) days</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card border-success shadow-sm">
                    <div class="card-body">
                        <h6 class="text-muted mb-2">Total Amount</h6>
                        <h2 class="text-success mb-0">$@reportData.TotalPaymentAmount.ToString("N2")</h2>
                        <small class="text-muted">All payments</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card border-info shadow-sm">
                    <div class="card-body">
                        <h6 class="text-muted mb-2">Average Payment</h6>
                        <h2 class="text-info mb-0">$@reportData.AveragePaymentAmount.ToString("N2")</h2>
                        <small class="text-muted">Per payment</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card border-success shadow-sm">
                    <div class="card-body">
                        <h6 class="text-muted mb-2">Success Rate</h6>
                        <h2 class="text-success mb-0">@reportData.StatusSummary.OverallSuccessRate.ToString("N1")%</h2>
                        <small class="text-muted">Completed payments</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Status Summary Cards -->
        <div class="row mb-4">
            <div class="col-md-3 mb-3">
                <div class="card border-success shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-check-circle text-success" style="font-size: 2rem;"></i>
                        <h6 class="text-muted mb-1 mt-2">Completed</h6>
                        <h4 class="mb-1">@reportData.StatusSummary.CompletedCount</h4>
                        <small class="text-muted">$@reportData.StatusSummary.CompletedAmount.ToString("N2")</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card border-warning shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-hourglass-split text-warning" style="font-size: 2rem;"></i>
                        <h6 class="text-muted mb-1 mt-2">Pending</h6>
                        <h4 class="mb-1">@reportData.StatusSummary.PendingCount</h4>
                        <small class="text-muted">$@reportData.StatusSummary.PendingAmount.ToString("N2")</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card border-danger shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-x-circle text-danger" style="font-size: 2rem;"></i>
                        <h6 class="text-muted mb-1 mt-2">Failed</h6>
                        <h4 class="mb-1">@reportData.StatusSummary.FailedCount</h4>
                        <small class="text-muted">$@reportData.StatusSummary.FailedAmount.ToString("N2")</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card border-secondary shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-slash-circle text-secondary" style="font-size: 2rem;"></i>
                        <h6 class="text-muted mb-1 mt-2">Cancelled</h6>
                        <h4 class="mb-1">@reportData.StatusSummary.CancelledCount</h4>
                        <small class="text-muted">$@reportData.StatusSummary.CancelledAmount.ToString("N2")</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Payments by Status -->
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="bi bi-bar-chart"></i> Payments by Status</h5>
            </div>
            <div class="card-body">
                @if (reportData.PaymentsByStatus.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Status</th>
                                    <th class="text-end">Count</th>
                                    <th class="text-end">Total Amount</th>
                                    <th class="text-end">Percentage</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var status in reportData.PaymentsByStatus.OrderByDescending(s => s.Count))
                                {
                                    <tr>
                                        <td>
                                            <span class="badge @GetStatusBadge(status.Status)">
                                                <i class="@GetStatusIcon(status.Status)"></i> @status.Status
                                            </span>
                                        </td>
                                        <td class="text-end"><strong>@status.Count</strong></td>
                                        <td class="text-end text-success fw-bold">$@status.TotalAmount.ToString("N2")</td>
                                        <td class="text-end">
                                            <span class="badge bg-info">@status.Percentage.ToString("N1")%</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Visual Distribution -->
                    <div class="mt-3">
                        <h6>Status Distribution</h6>
                        @foreach (var status in reportData.PaymentsByStatus.OrderByDescending(s => s.Count))
                        {
                            <div class="mb-2">
                                <div class="d-flex justify-content-between mb-1">
                                    <small><strong>@status.Status</strong> - @status.Count payment(s)</small>
                                    <small>@status.Percentage.ToString("N1")%</small>
                                </div>
                                <div class="progress">
                                    <div class="progress-bar @GetProgressBarColor(status.Status)" 
                                         role="progressbar" 
                                         style="width: @status.Percentage%" 
                                         aria-valuenow="@status.Percentage" 
                                         aria-valuemin="0" 
                                         aria-valuemax="100">
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-info mb-0">
                        <i class="bi bi-info-circle"></i> No payment status data available.
                    </div>
                }
            </div>
        </div>

        <!-- Payments by Payment Method -->
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="bi bi-wallet2"></i> Payments by Payment Method</h5>
            </div>
            <div class="card-body">
                @if (reportData.PaymentsByMethod.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Payment Method</th>
                                    <th class="text-end">Transactions</th>
                                    <th class="text-end">Total Amount</th>
                                    <th class="text-end">Completed</th>
                                    <th class="text-end">Failed</th>
                                    <th class="text-end">Percentage</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var method in reportData.PaymentsByMethod.OrderByDescending(m => m.TotalAmount))
                                {
                                    <tr>
                                        <td><strong>@method.PaymentMethodName</strong></td>
                                        <td class="text-end">@method.TransactionCount</td>
                                        <td class="text-end text-success fw-bold">$@method.TotalAmount.ToString("N2")</td>
                                        <td class="text-end">
                                            <span class="badge bg-success">@method.CompletedCount</span>
                                        </td>
                                        <td class="text-end">
                                            <span class="badge bg-danger">@method.FailedCount</span>
                                        </td>
                                        <td class="text-end">
                                            <span class="badge bg-info">@method.Percentage.ToString("N1")%</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!-- Visual Distribution -->
                    <div class="mt-3">
                        <h6>Payment Method Distribution</h6>
                        @foreach (var method in reportData.PaymentsByMethod.OrderByDescending(m => m.TotalAmount))
                        {
                            <div class="mb-2">
                                <div class="d-flex justify-content-between mb-1">
                                    <small><strong>@method.PaymentMethodName</strong> - @method.TransactionCount transaction(s)</small>
                                    <small>@method.Percentage.ToString("N1")%</small>
                                </div>
                                <div class="progress">
                                    <div class="progress-bar bg-primary" role="progressbar" 
                                         style="width: @method.Percentage%" 
                                         aria-valuenow="@method.Percentage" 
                                         aria-valuemin="0" 
                                         aria-valuemax="100">
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-info mb-0">
                        <i class="bi bi-info-circle"></i> No payment method data available.
                    </div>
                }
            </div>
        </div>

        <!-- Monthly Trend -->
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="bi bi-calendar3"></i> Monthly Payment Trend</h5>
            </div>
            <div class="card-body">
                @if (reportData.PaymentsByMonth.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Month</th>
                                    <th class="text-end">Total Payments</th>
                                    <th class="text-end">Total Amount</th>
                                    <th class="text-end">Completed</th>
                                    <th class="text-end">Failed</th>
                                    <th class="text-end">Success Rate</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var month in reportData.PaymentsByMonth)
                                {
                                    var successRate = month.PaymentCount > 0 
                                        ? (decimal)month.CompletedCount / month.PaymentCount * 100 
                                        : 0;
                                    <tr>
                                        <td><strong>@month.MonthName @month.Year</strong></td>
                                        <td class="text-end">@month.PaymentCount</td>
                                        <td class="text-end text-success fw-bold">$@month.TotalAmount.ToString("N2")</td>
                                        <td class="text-end">
                                            <span class="badge bg-success">@month.CompletedCount</span>
                                        </td>
                                        <td class="text-end">
                                            <span class="badge bg-danger">@month.FailedCount</span>
                                        </td>
                                        <td class="text-end">
                                            <span class="badge @(successRate >= 90 ? "bg-success" : successRate >= 70 ? "bg-warning text-dark" : "bg-danger")">
                                                @successRate.ToString("N1")%
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="table-secondary">
                                <tr>
                                    <td><strong>Total</strong></td>
                                    <td class="text-end"><strong>@reportData.TotalPayments</strong></td>
                                    <td class="text-end"><strong>$@reportData.TotalPaymentAmount.ToString("N2")</strong></td>
                                    <td class="text-end"><strong>@reportData.StatusSummary.CompletedCount</strong></td>
                                    <td class="text-end"><strong>@reportData.StatusSummary.FailedCount</strong></td>
                                    <td class="text-end"><strong>@reportData.StatusSummary.OverallSuccessRate.ToString("N1")%</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info mb-0">
                        <i class="bi bi-info-circle"></i> No monthly trend data available.
                    </div>
                }
            </div>
        </div>

        <!-- Export Buttons -->
        <div class="card">
            <div class="card-body">
                <h5 class="mb-3"><i class="bi bi-download"></i> Export Report</h5>
                <button class="btn btn-danger me-2" disabled>
                    <i class="bi bi-file-pdf"></i> Export to PDF
                </button>
                <button class="btn btn-success me-2" disabled>
                    <i class="bi bi-file-excel"></i> Export to Excel
                </button>
                <button class="btn btn-info" disabled>
                    <i class="bi bi-file-earmark-spreadsheet"></i> Export to CSV
                </button>
                <p class="text-muted mt-2 mb-0"><small><i class="bi bi-info-circle"></i> Export functionality coming soon</small></p>
            </div>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle"></i> @errorMessage
        </div>
        <button class="btn btn-primary" @onclick="LoadReport">
            <i class="bi bi-arrow-clockwise"></i> Retry
        </button>
    }
</div>

@code {
    private DateTime startDate = DateTime.Now.AddMonths(-1).Date;
    private DateTime endDate = DateTime.Now.Date;
    private bool isLoading = false;
    private PaymentSummaryReportModel? reportData;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        // Load report with default date range (last month)
        await LoadReport();
    }

    private async Task LoadReport()
    {
        isLoading = true;
        errorMessage = null;
        reportData = null;

        try
        {
            var url = $"api/PaymentReport/summary?startDate={startDate:yyyy-MM-dd}&endDate={endDate:yyyy-MM-dd}";
            reportData = await Http.GetFromJsonAsync<PaymentSummaryReportModel>(url);
        }
        catch (HttpRequestException httpEx)
        {
            errorMessage = $"Network error: {httpEx.Message}. Please check if the API is running.";
            Console.WriteLine($"HTTP Error: {httpEx.Message}");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading payment summary report: {ex.Message}";
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private string GetStatusBadge(string status)
    {
        return status switch
        {
            "Completed" => "bg-success",
            "Pending" => "bg-warning text-dark",
            "Failed" => "bg-danger",
            "Cancelled" => "bg-secondary",
            _ => "bg-light text-dark"
        };
    }

    private string GetStatusIcon(string status)
    {
        return status switch
        {
            "Completed" => "bi bi-check-circle",
            "Pending" => "bi bi-hourglass-split",
            "Failed" => "bi bi-x-circle",
            "Cancelled" => "bi bi-slash-circle",
            _ => "bi bi-question-circle"
        };
    }

    private string GetProgressBarColor(string status)
    {
        return status switch
        {
            "Completed" => "bg-success",
            "Pending" => "bg-warning",
            "Failed" => "bg-danger",
            "Cancelled" => "bg-secondary",
            _ => "bg-info"
        };
    }
}
