@page "/reports/transactions"
@using Hyip_Payments.Models.Reports
@inject HttpClient Http

<PageTitle>Transaction Log Report - HYIP Payments</PageTitle>

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="bi bi-arrow-left-right"></i> Transaction Log Report</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/reports">Reports</a></li>
                    <li class="breadcrumb-item active">Transaction Log</li>
                </ol>
            </nav>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-funnel"></i> Filter Options</h5>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-3">
                    <label class="form-label fw-bold">Start Date</label>
                    <input type="date" class="form-control" @bind="startDate" />
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-bold">End Date</label>
                    <input type="date" class="form-control" @bind="endDate" />
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-bold">Status</label>
                    <select class="form-select" @bind="selectedStatus">
                        <option value="">All Statuses</option>
                        <option value="Completed">Completed</option>
                        <option value="Pending">Pending</option>
                        <option value="Failed">Failed</option>
                        <option value="Cancelled">Cancelled</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-bold">Payment Method</label>
                    <select class="form-select" @bind="selectedPaymentMethod">
                        <option value="">All Methods</option>
                        @foreach (var method in paymentMethods)
                        {
                            <option value="@method">@method</option>
                        }
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-md-9">
                    <label class="form-label fw-bold">Search</label>
                    <input type="text" class="form-control" @bind="searchTerm" 
                           placeholder="Search by reference, invoice number, or description..." />
                </div>
                <div class="col-md-3">
                    <label class="form-label">&nbsp;</label>
                    <button class="btn btn-primary w-100" @onclick="LoadReport" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        <i class="bi bi-search"></i> Search Transactions
                    </button>
                </div>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center my-5">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3">Loading transaction log...</p>
        </div>
    }
    else if (reportData != null)
    {
        <!-- Summary Cards -->
        <div class="row mb-4">
            <div class="col-md-3 mb-3">
                <div class="card border-primary shadow-sm">
                    <div class="card-body">
                        <h6 class="text-muted mb-2">Filtered Results</h6>
                        <h2 class="text-primary mb-0">@reportData.TotalTransactions</h2>
                        <small class="text-muted">Matching transactions</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card border-success shadow-sm">
                    <div class="card-body">
                        <h6 class="text-muted mb-2">Filtered Amount</h6>
                        <h2 class="text-success mb-0">$@reportData.TotalAmount.ToString("N2")</h2>
                        <small class="text-muted">Total filtered value</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card border-info shadow-sm">
                    <div class="card-body">
                        <h6 class="text-muted mb-2">Average Transaction</h6>
                        <h2 class="text-info mb-0">$@reportData.Summary.AverageTransactionAmount.ToString("N2")</h2>
                        <small class="text-muted">All transactions</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card border-warning shadow-sm">
                    <div class="card-body">
                        <h6 class="text-muted mb-2">Period</h6>
                        <h2 class="text-warning mb-0">@((reportData.EndDate - reportData.StartDate).Days)</h2>
                        <small class="text-muted">Days</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Status Summary -->
        <div class="row mb-4">
            <div class="col-md-3 mb-3">
                <div class="card border-success shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-check-circle text-success" style="font-size: 2rem;"></i>
                        <h6 class="text-muted mb-1 mt-2">Completed</h6>
                        <h4 class="mb-1">@reportData.Summary.CompletedTransactions</h4>
                        <small class="text-muted">$@reportData.Summary.CompletedAmount.ToString("N2")</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card border-warning shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-hourglass-split text-warning" style="font-size: 2rem;"></i>
                        <h6 class="text-muted mb-1 mt-2">Pending</h6>
                        <h4 class="mb-1">@reportData.Summary.PendingTransactions</h4>
                        <small class="text-muted">$@reportData.Summary.PendingAmount.ToString("N2")</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card border-danger shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-x-circle text-danger" style="font-size: 2rem;"></i>
                        <h6 class="text-muted mb-1 mt-2">Failed</h6>
                        <h4 class="mb-1">@reportData.Summary.FailedTransactions</h4>
                        <small class="text-muted">$@reportData.Summary.FailedAmount.ToString("N2")</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card border-secondary shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-slash-circle text-secondary" style="font-size: 2rem;"></i>
                        <h6 class="text-muted mb-1 mt-2">Cancelled</h6>
                        <h4 class="mb-1">@reportData.Summary.CancelledTransactions</h4>
                        <small class="text-muted">-</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Transaction Log Table -->
        <div class="card mb-4">
            <div class="card-header bg-light d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-list-ul"></i> Transaction Log</h5>
                <span class="badge bg-primary">@reportData.TotalTransactions transaction(s)</span>
            </div>
            <div class="card-body">
                @if (reportData.Transactions.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover table-sm">
                            <thead class="table-light">
                                <tr>
                                    <th>Reference</th>
                                    <th>Date & Time</th>
                                    <th class="text-end">Amount</th>
                                    <th>Status</th>
                                    <th>Payment Method</th>
                                    <th>Invoice</th>
                                    <th>Description</th>
                                    <th>Processed By</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var transaction in reportData.Transactions)
                                {
                                    <tr class="@GetRowClass(transaction.Status)">
                                        <td>
                                            <strong>@transaction.TransactionReference</strong>
                                            <br />
                                            <small class="text-muted">ID: @transaction.TransactionId</small>
                                        </td>
                                        <td>
                                            @transaction.TransactionDate.ToString("MMM dd, yyyy")
                                            <br />
                                            <small class="text-muted">@transaction.TransactionDate.ToString("HH:mm:ss")</small>
                                        </td>
                                        <td class="text-end">
                                            <strong class="@GetAmountClass(transaction.Status)">
                                                $@transaction.Amount.ToString("N2")
                                            </strong>
                                        </td>
                                        <td>
                                            <span class="badge @GetStatusBadge(transaction.Status)">
                                                <i class="@GetStatusIcon(transaction.Status)"></i> @transaction.Status
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge bg-primary">@transaction.PaymentMethod</span>
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(transaction.InvoiceNumber))
                                            {
                                                <a href="/invoice/view/@transaction.InvoiceId">@transaction.InvoiceNumber</a>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            <small>@(string.IsNullOrEmpty(transaction.Description) ? "-" : transaction.Description)</small>
                                        </td>
                                        <td><small>@(transaction.ProcessedBy ?? "-")</small></td>
                                        <td class="text-center">
                                            <a href="/payment/edit/@transaction.TransactionId" class="btn btn-sm btn-info" title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="table-secondary">
                                <tr>
                                    <td colspan="2"><strong>Filtered Total</strong></td>
                                    <td class="text-end"><strong>$@reportData.TotalAmount.ToString("N2")</strong></td>
                                    <td colspan="6"></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info mb-0">
                        <i class="bi bi-info-circle"></i> No transactions found matching your filters.
                    </div>
                }
            </div>
        </div>

        <!-- Analytics -->
        <div class="row mb-4">
            <!-- By Payment Method -->
            <div class="col-md-6 mb-3">
                <div class="card">
                    <div class="card-header bg-light">
                        <h6 class="mb-0"><i class="bi bi-wallet2"></i> Transactions by Payment Method</h6>
                    </div>
                    <div class="card-body">
                        @if (reportData.Summary.TransactionsByMethod.Any())
                        {
                            @foreach (var method in reportData.Summary.TransactionsByMethod.OrderByDescending(m => m.Value))
                            {
                                <div class="mb-2">
                                    <div class="d-flex justify-content-between">
                                        <small><strong>@method.Key</strong></small>
                                        <small>@method.Value transaction(s)</small>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-muted mb-0">No data available</p>
                        }
                    </div>
                </div>
            </div>

            <!-- By Hour -->
            <div class="col-md-6 mb-3">
                <div class="card">
                    <div class="card-header bg-light">
                        <h6 class="mb-0"><i class="bi bi-clock"></i> Transactions by Hour</h6>
                    </div>
                    <div class="card-body">
                        @if (reportData.Summary.TransactionsByHour.Any())
                        {
                            <div style="max-height: 200px; overflow-y: auto;">
                                @foreach (var hour in reportData.Summary.TransactionsByHour.OrderBy(h => h.Key))
                                {
                                    <div class="mb-2">
                                        <div class="d-flex justify-content-between">
                                            <small><strong>@hour.Key</strong></small>
                                            <small>@hour.Value transaction(s)</small>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-muted mb-0">No data available</p>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Export Buttons -->
        <div class="card">
            <div class="card-body">
                <h5 class="mb-3"><i class="bi bi-download"></i> Export Report</h5>
                <button class="btn btn-danger me-2" disabled>
                    <i class="bi bi-file-pdf"></i> Export to PDF
                </button>
                <button class="btn btn-success me-2" disabled>
                    <i class="bi bi-file-excel"></i> Export to Excel
                </button>
                <button class="btn btn-info" disabled>
                    <i class="bi bi-file-earmark-spreadsheet"></i> Export to CSV
                </button>
                <p class="text-muted mt-2 mb-0"><small><i class="bi bi-info-circle"></i> Export functionality coming soon</small></p>
            </div>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle"></i> @errorMessage
        </div>
        <button class="btn btn-primary" @onclick="LoadReport">
            <i class="bi bi-arrow-clockwise"></i> Retry
        </button>
    }
</div>

@code {
    private DateTime startDate = DateTime.Now.AddDays(-7).Date;
    private DateTime endDate = DateTime.Now.Date;
    private string selectedStatus = "";
    private string selectedPaymentMethod = "";
    private string searchTerm = "";
    private bool isLoading = false;
    private TransactionLogReportModel? reportData;
    private string? errorMessage;

    private List<string> paymentMethods = new() { "Credit Card", "PayPal", "Bank Transfer", "Cryptocurrency" };

    protected override async Task OnInitializedAsync()
    {
        // Load report with default date range (last 7 days)
        await LoadReport();
    }

    private async Task LoadReport()
    {
        isLoading = true;
        errorMessage = null;
        reportData = null;

        try
        {
            var url = $"api/PaymentReport/transactions?startDate={startDate:yyyy-MM-dd}&endDate={endDate:yyyy-MM-dd}";
            
            if (!string.IsNullOrEmpty(selectedStatus))
                url += $"&status={selectedStatus}";
            
            if (!string.IsNullOrEmpty(selectedPaymentMethod))
                url += $"&paymentMethod={selectedPaymentMethod}";
            
            if (!string.IsNullOrEmpty(searchTerm))
                url += $"&searchTerm={Uri.EscapeDataString(searchTerm)}";

            reportData = await Http.GetFromJsonAsync<TransactionLogReportModel>(url);
        }
        catch (HttpRequestException httpEx)
        {
            errorMessage = $"Network error: {httpEx.Message}. Please check if the API is running.";
            Console.WriteLine($"HTTP Error: {httpEx.Message}");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading transaction log: {ex.Message}";
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private string GetStatusBadge(string status)
    {
        return status switch
        {
            "Completed" => "bg-success",
            "Pending" => "bg-warning text-dark",
            "Failed" => "bg-danger",
            "Cancelled" => "bg-secondary",
            _ => "bg-light text-dark"
        };
    }

    private string GetStatusIcon(string status)
    {
        return status switch
        {
            "Completed" => "bi bi-check-circle",
            "Pending" => "bi bi-hourglass-split",
            "Failed" => "bi bi-x-circle",
            "Cancelled" => "bi bi-slash-circle",
            _ => "bi bi-question-circle"
        };
    }

    private string GetRowClass(string status)
    {
        return status switch
        {
            "Completed" => "table-success",
            "Failed" => "table-danger",
            _ => ""
        };
    }

    private string GetAmountClass(string status)
    {
        return status switch
        {
            "Completed" => "text-success",
            "Failed" => "text-danger",
            _ => "text-muted"
        };
    }
}
