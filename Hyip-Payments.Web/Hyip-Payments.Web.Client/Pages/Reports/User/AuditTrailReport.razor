@page "/reports/audit-trail"
@using Hyip_Payments.Models.Reports
@inject HttpClient Http

<PageTitle>Audit Trail - HYIP Payments</PageTitle>

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="bi bi-shield-check"></i> Audit Trail Report</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/reports">Reports</a></li>
                    <li class="breadcrumb-item active">Audit Trail</li>
                </ol>
            </nav>
        </div>
    </div>

    <!-- Advanced Filters -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-funnel"></i> Filter Options</h5>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-3">
                    <label class="form-label fw-bold">Start Date</label>
                    <input type="date" class="form-control" @bind="startDate" />
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-bold">End Date</label>
                    <input type="date" class="form-control" @bind="endDate" />
                </div>
                <div class="col-md-2">
                    <label class="form-label fw-bold">Action Type</label>
                    <select class="form-select" @bind="selectedActionType">
                        <option value="">All Actions</option>
                        <option value="Create">Create</option>
                        <option value="Update">Update</option>
                        <option value="Delete">Delete</option>
                        <option value="View">View</option>
                        <option value="Login">Login</option>
                        <option value="Security">Security</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label fw-bold">Entity Type</label>
                    <select class="form-select" @bind="selectedEntityType">
                        <option value="">All Entities</option>
                        <option value="Invoice">Invoice</option>
                        <option value="Payment">Payment</option>
                        <option value="Product">Product</option>
                        <option value="User">User</option>
                        <option value="System">System</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label fw-bold">User</label>
                    <input type="text" class="form-control" @bind="performedBy" placeholder="Username..." />
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 text-end">
                    <button class="btn btn-secondary me-2" @onclick="ClearFilters">
                        <i class="bi bi-x-circle"></i> Clear Filters
                    </button>
                    <button class="btn btn-primary" @onclick="LoadReport" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        <i class="bi bi-search"></i> Search Audit Trail
                    </button>
                </div>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center my-5">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3">Loading audit trail...</p>
        </div>
    }
    else if (reportData != null)
    {
        <!-- Security Alert Banner -->
        @if (reportData.Summary.CriticalEvents > 0)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <h5 class="alert-heading">
                    <i class="bi bi-exclamation-triangle-fill"></i> Critical Security Events Detected
                </h5>
                <hr>
                <p class="mb-0">
                    <strong>@reportData.Summary.CriticalEvents critical event(s)</strong> found in the audit trail. 
                    Immediate review recommended.
                </p>
            </div>
        }

        <!-- Summary Cards -->
        <div class="row mb-4">
            <div class="col-md-3 mb-3">
                <div class="card border-primary shadow-sm">
                    <div class="card-body">
                        <h6 class="text-muted mb-2">Total Events</h6>
                        <h2 class="text-primary mb-0">@reportData.TotalEvents</h2>
                        <small class="text-muted">@((reportData.EndDate - reportData.StartDate).Days) days</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card border-danger shadow-sm">
                    <div class="card-body">
                        <h6 class="text-muted mb-2">Critical Events</h6>
                        <h2 class="text-danger mb-0">@reportData.Summary.CriticalEvents</h2>
                        <small class="text-muted">High priority</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card border-warning shadow-sm">
                    <div class="card-body">
                        <h6 class="text-muted mb-2">Warnings</h6>
                        <h2 class="text-warning mb-0">@reportData.Summary.WarningEvents</h2>
                        <small class="text-muted">Medium priority</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card border-info shadow-sm">
                    <div class="card-body">
                        <h6 class="text-muted mb-2">Info Events</h6>
                        <h2 class="text-info mb-0">@reportData.Summary.InfoEvents</h2>
                        <small class="text-muted">Normal activity</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Action Type Summary -->
        <div class="row mb-4">
            <div class="col-md-2 mb-3">
                <div class="card border-success shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-plus-circle text-success" style="font-size: 1.5rem;"></i>
                        <h6 class="text-muted mb-1 mt-2">Create</h6>
                        <h4 class="mb-0">@reportData.Summary.CreateActions</h4>
                    </div>
                </div>
            </div>
            <div class="col-md-2 mb-3">
                <div class="card border-primary shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-pencil text-primary" style="font-size: 1.5rem;"></i>
                        <h6 class="text-muted mb-1 mt-2">Update</h6>
                        <h4 class="mb-0">@reportData.Summary.UpdateActions</h4>
                    </div>
                </div>
            </div>
            <div class="col-md-2 mb-3">
                <div class="card border-danger shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-trash text-danger" style="font-size: 1.5rem;"></i>
                        <h6 class="text-muted mb-1 mt-2">Delete</h6>
                        <h4 class="mb-0">@reportData.Summary.DeleteActions</h4>
                    </div>
                </div>
            </div>
            <div class="col-md-2 mb-3">
                <div class="card border-info shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-eye text-info" style="font-size: 1.5rem;"></i>
                        <h6 class="text-muted mb-1 mt-2">View</h6>
                        <h4 class="mb-0">@reportData.Summary.ViewActions</h4>
                    </div>
                </div>
            </div>
            <div class="col-md-2 mb-3">
                <div class="card border-success shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-box-arrow-in-right text-success" style="font-size: 1.5rem;"></i>
                        <h6 class="text-muted mb-1 mt-2">Login</h6>
                        <h4 class="mb-0">@reportData.Summary.LoginActions</h4>
                    </div>
                </div>
            </div>
            <div class="col-md-2 mb-3">
                <div class="card border-danger shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-shield-exclamation text-danger" style="font-size: 1.5rem;"></i>
                        <h6 class="text-muted mb-1 mt-2">Security</h6>
                        <h4 class="mb-0">@reportData.Summary.SecurityEvents</h4>
                    </div>
                </div>
            </div>
        </div>

        <!-- Top Activity Cards -->
        <div class="row mb-4">
            <div class="col-md-6 mb-3">
                <div class="card border-primary shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-person-badge text-primary" style="font-size: 2.5rem;"></i>
                        <h5 class="mt-2 mb-1">Most Active User</h5>
                        <h3 class="text-primary mb-1">@reportData.Summary.MostActiveUser</h3>
                        <p class="mb-0">
                            <strong>@reportData.Summary.MostActiveUserActions</strong> audit events
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <div class="card border-info shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-database text-info" style="font-size: 2.5rem;"></i>
                        <h5 class="mt-2 mb-1">Most Audited Entity</h5>
                        <h3 class="text-info mb-1">@reportData.Summary.MostAuditedEntity</h3>
                        <p class="mb-0">
                            <strong>@reportData.Summary.MostAuditedEntityCount</strong> events
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Audit Trail Events -->
        <div class="card mb-4">
            <div class="card-header bg-light d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-clock-history"></i> Audit Events</h5>
                <span class="badge bg-primary">@reportData.TotalEvents event(s)</span>
            </div>
            <div class="card-body">
                @if (reportData.AuditEvents.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover table-sm">
                            <thead class="table-light">
                                <tr>
                                    <th>Timestamp</th>
                                    <th>Action</th>
                                    <th>Entity</th>
                                    <th>Performed By</th>
                                    <th>Description</th>
                                    <th>IP Address</th>
                                    <th class="text-center">Severity</th>
                                    <th class="text-center">Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var evt in reportData.AuditEvents)
                                {
                                    <tr class="@GetRowClass(evt.Severity)">
                                        <td>
                                            <small>
                                                @evt.Timestamp.ToString("MMM dd, yyyy")
                                                <br />
                                                <span class="text-muted">@evt.Timestamp.ToString("HH:mm:ss")</span>
                                            </small>
                                        </td>
                                        <td>
                                            <span class="badge @GetActionBadge(evt.ActionType)">
                                                <i class="@GetActionIcon(evt.ActionType)"></i> @evt.ActionType
                                            </span>
                                        </td>
                                        <td>
                                            <strong>@evt.EntityType</strong>
                                            <br />
                                            <small class="text-muted">ID: @evt.EntityId</small>
                                        </td>
                                        <td>
                                            <strong>@evt.PerformedBy</strong>
                                            <br />
                                            <small class="text-muted">@evt.UserRole</small>
                                        </td>
                                        <td>
                                            <small>@evt.Description</small>
                                            @if (!string.IsNullOrEmpty(evt.NewValue))
                                            {
                                                <br />
                                                <small class="text-success">New: @evt.NewValue</small>
                                            }
                                            @if (!string.IsNullOrEmpty(evt.OldValue))
                                            {
                                                <br />
                                                <small class="text-danger">Old: @evt.OldValue</small>
                                            }
                                        </td>
                                        <td><small class="font-monospace">@evt.IpAddress</small></td>
                                        <td class="text-center">
                                            <span class="badge @GetSeverityBadge(evt.Severity)">
                                                @evt.Severity
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            @if (evt.IsSuccessful)
                                            {
                                                <i class="bi bi-check-circle text-success" title="Success"></i>
                                            }
                                            else
                                            {
                                                <i class="bi bi-x-circle text-danger" title="Failed"></i>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info mb-0">
                        <i class="bi bi-info-circle"></i> No audit events found matching your filters.
                    </div>
                }
            </div>
        </div>

        <!-- Analytics -->
        <div class="row mb-4">
            <div class="col-md-6 mb-3">
                <div class="card">
                    <div class="card-header bg-light">
                        <h6 class="mb-0"><i class="bi bi-bar-chart"></i> Actions by Type</h6>
                    </div>
                    <div class="card-body">
                        @if (reportData.Summary.ActionsByType.Any())
                        {
                            @foreach (var action in reportData.Summary.ActionsByType.OrderByDescending(a => a.Value))
                            {
                                var percentage = reportData.TotalEvents > 0 
                                    ? (decimal)action.Value / reportData.TotalEvents * 100 
                                    : 0;
                                <div class="mb-2">
                                    <div class="d-flex justify-content-between mb-1">
                                        <small><strong>@action.Key</strong></small>
                                        <small>@action.Value (@percentage.ToString("N1")%)</small>
                                    </div>
                                    <div class="progress">
                                        <div class="progress-bar @GetActionProgressColor(action.Key)" 
                                             role="progressbar" 
                                             style="width: @percentage%">
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-muted mb-0">No data</p>
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <div class="card">
                    <div class="card-header bg-light">
                        <h6 class="mb-0"><i class="bi bi-layers"></i> Events by Entity Type</h6>
                    </div>
                    <div class="card-body">
                        @if (reportData.Summary.ActionsByEntity.Any())
                        {
                            @foreach (var entity in reportData.Summary.ActionsByEntity.OrderByDescending(e => e.Value))
                            {
                                var percentage = reportData.TotalEvents > 0 
                                    ? (decimal)entity.Value / reportData.TotalEvents * 100 
                                    : 0;
                                <div class="mb-2">
                                    <div class="d-flex justify-content-between mb-1">
                                        <small><strong>@entity.Key</strong></small>
                                        <small>@entity.Value (@percentage.ToString("N1")%)</small>
                                    </div>
                                    <div class="progress">
                                        <div class="progress-bar bg-info" 
                                             role="progressbar" 
                                             style="width: @percentage%">
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-muted mb-0">No data</p>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Compliance & Security Insights -->
        <div class="card mb-4">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0"><i class="bi bi-shield-check"></i> Compliance & Security Insights</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6>Audit Summary</h6>
                        <ul>
                            <li>
                                <strong>Total Events Logged:</strong> @reportData.TotalEvents
                            </li>
                            <li>
                                <strong>Critical Events:</strong> 
                                <span class="@(reportData.Summary.CriticalEvents > 0 ? "text-danger fw-bold" : "text-success")">
                                    @reportData.Summary.CriticalEvents
                                </span>
                            </li>
                            <li>
                                <strong>Warning Events:</strong> @reportData.Summary.WarningEvents
                            </li>
                            <li>
                                <strong>Unique Users:</strong> @reportData.Summary.ActionsByUser.Count
                            </li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <h6>Recommendations</h6>
                        <ul>
                            @if (reportData.Summary.CriticalEvents > 0)
                            {
                                <li class="text-danger">
                                    <strong>üö® Critical Events Detected:</strong> Review and investigate immediately.
                                </li>
                            }
                            @if (reportData.Summary.SecurityEvents > 10)
                            {
                                <li class="text-warning">
                                    <strong>‚ö†Ô∏è High Security Event Count:</strong> Review authentication and access controls.
                                </li>
                            }
                            @if (reportData.Summary.DeleteActions > 50)
                            {
                                <li class="text-warning">
                                    <strong>üí° Many Delete Operations:</strong> Consider implementing soft-delete policies.
                                </li>
                            }
                            @if (reportData.Summary.CriticalEvents == 0)
                            {
                                <li class="text-success">
                                    <strong>‚úÖ No Critical Events:</strong> System security is healthy.
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- Export Buttons -->
        <div class="card">
            <div class="card-body">
                <h5 class="mb-3"><i class="bi bi-download"></i> Export Report</h5>
                <button class="btn btn-danger me-2" disabled>
                    <i class="bi bi-file-pdf"></i> Export to PDF
                </button>
                <button class="btn btn-success me-2" disabled>
                    <i class="bi bi-file-excel"></i> Export to Excel
                </button>
                <button class="btn btn-info" disabled>
                    <i class="bi bi-file-earmark-spreadsheet"></i> Export to CSV
                </button>
                <p class="text-muted mt-2 mb-0"><small><i class="bi bi-info-circle"></i> Export functionality coming soon</small></p>
            </div>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle"></i> @errorMessage
        </div>
        <button class="btn btn-primary" @onclick="LoadReport">
            <i class="bi bi-arrow-clockwise"></i> Retry
        </button>
    }
</div>

@code {
    private DateTime startDate = DateTime.Now.AddDays(-7).Date;
    private DateTime endDate = DateTime.Now.Date;
    private string selectedActionType = "";
    private string selectedEntityType = "";
    private string performedBy = "";
    private bool isLoading = false;
    private AuditTrailReportModel? reportData;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadReport();
    }

    private async Task LoadReport()
    {
        isLoading = true;
        errorMessage = null;
        reportData = null;

        try
        {
            var url = $"api/UserReport/audit-trail?startDate={startDate:yyyy-MM-dd}&endDate={endDate:yyyy-MM-dd}";
            
            if (!string.IsNullOrEmpty(selectedActionType))
                url += $"&actionType={selectedActionType}";
            
            if (!string.IsNullOrEmpty(selectedEntityType))
                url += $"&entityType={selectedEntityType}";
            
            if (!string.IsNullOrEmpty(performedBy))
                url += $"&performedBy={Uri.EscapeDataString(performedBy)}";

            reportData = await Http.GetFromJsonAsync<AuditTrailReportModel>(url);
        }
        catch (HttpRequestException httpEx)
        {
            errorMessage = $"Network error: {httpEx.Message}. Please check if the API is running.";
            Console.WriteLine($"HTTP Error: {httpEx.Message}");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading audit trail: {ex.Message}";
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ClearFilters()
    {
        selectedActionType = "";
        selectedEntityType = "";
        performedBy = "";
    }

    private string GetActionBadge(string action)
    {
        return action switch
        {
            "Create" => "bg-success",
            "Update" => "bg-primary",
            "Delete" => "bg-danger",
            "View" => "bg-info",
            "Login" => "bg-success",
            "Security" => "bg-danger",
            _ => "bg-secondary"
        };
    }

    private string GetActionIcon(string action)
    {
        return action switch
        {
            "Create" => "bi bi-plus-circle",
            "Update" => "bi bi-pencil",
            "Delete" => "bi bi-trash",
            "View" => "bi bi-eye",
            "Login" => "bi bi-box-arrow-in-right",
            "Security" => "bi bi-shield-exclamation",
            _ => "bi bi-circle"
        };
    }

    private string GetSeverityBadge(string severity)
    {
        return severity switch
        {
            "Critical" => "bg-danger",
            "Warning" => "bg-warning text-dark",
            "Info" => "bg-info",
            _ => "bg-secondary"
        };
    }

    private string GetRowClass(string severity)
    {
        return severity switch
        {
            "Critical" => "table-danger",
            "Warning" => "table-warning",
            _ => ""
        };
    }

    private string GetActionProgressColor(string action)
    {
        return action switch
        {
            "Create" => "bg-success",
            "Update" => "bg-primary",
            "Delete" => "bg-danger",
            "View" => "bg-info",
            "Login" => "bg-success",
            "Security" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}
