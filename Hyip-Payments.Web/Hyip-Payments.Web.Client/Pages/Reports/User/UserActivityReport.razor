@page "/reports/user-activity"
@using Hyip_Payments.Models.Reports
@inject HttpClient Http

<PageTitle>User Activity Report - HYIP Payments</PageTitle>

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="bi bi-people"></i> User Activity Report</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/reports">Reports</a></li>
                    <li class="breadcrumb-item active">User Activity</li>
                </ol>
            </nav>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-funnel"></i> Filter Options</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <label class="form-label fw-bold">Start Date</label>
                    <input type="date" class="form-control" @bind="startDate" />
                </div>
                <div class="col-md-4">
                    <label class="form-label fw-bold">End Date</label>
                    <input type="date" class="form-control" @bind="endDate" />
                </div>
                <div class="col-md-2">
                    <label class="form-label fw-bold">Role</label>
                    <select class="form-select" @bind="selectedRole">
                        <option value="">All Roles</option>
                        <option value="Admin">Admin</option>
                        <option value="Manager">Manager</option>
                        <option value="User">User</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">&nbsp;</label>
                    <button class="btn btn-primary w-100" @onclick="LoadReport" disabled="@isLoading">
                        @if (isLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        <i class="bi bi-search"></i> Generate
                    </button>
                </div>
            </div>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="text-center my-5">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3">Loading user activity data...</p>
        </div>
    }
    else if (reportData != null)
    {
        <!-- Summary Cards -->
        <div class="row mb-4">
            <div class="col-md-3 mb-3">
                <div class="card border-primary shadow-sm">
                    <div class="card-body">
                        <h6 class="text-muted mb-2">Total Users</h6>
                        <h2 class="text-primary mb-0">@reportData.TotalUsers</h2>
                        <small class="text-muted">In system</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card border-success shadow-sm">
                    <div class="card-body">
                        <h6 class="text-muted mb-2">Active Users</h6>
                        <h2 class="text-success mb-0">@reportData.ActiveUsers</h2>
                        <small class="text-muted">Enabled accounts</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card border-warning shadow-sm">
                    <div class="card-body">
                        <h6 class="text-muted mb-2">Avg Engagement</h6>
                        <h2 class="text-warning mb-0">@reportData.Summary.AverageEngagementScore.ToString("N0")</h2>
                        <small class="text-muted">Score (0-100)</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card border-info shadow-sm">
                    <div class="card-body">
                        <h6 class="text-muted mb-2">Avg Actions</h6>
                        <h2 class="text-info mb-0">@reportData.Summary.AverageActionsPerUser.ToString("N0")</h2>
                        <small class="text-muted">Per user</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Engagement Level Distribution -->
        <div class="row mb-4">
            <div class="col-md-3 mb-3">
                <div class="card border-success shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-star-fill text-success" style="font-size: 2rem;"></i>
                        <h6 class="text-muted mb-1 mt-2">Highly Active</h6>
                        <h4 class="mb-1">@reportData.Summary.HighlyActiveUsers</h4>
                        <small class="text-muted">Score ‚â• 70</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card border-info shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-star-half text-info" style="font-size: 2rem;"></i>
                        <h6 class="text-muted mb-1 mt-2">Moderately Active</h6>
                        <h4 class="mb-1">@reportData.Summary.ModeratelyActiveUsers</h4>
                        <small class="text-muted">Score 40-69</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card border-warning shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-star text-warning" style="font-size: 2rem;"></i>
                        <h6 class="text-muted mb-1 mt-2">Low Activity</h6>
                        <h4 class="mb-1">@reportData.Summary.LowActivityUsers</h4>
                        <small class="text-muted">Score 10-39</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card border-secondary shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-dash-circle text-secondary" style="font-size: 2rem;"></i>
                        <h6 class="text-muted mb-1 mt-2">Inactive</h6>
                        <h4 class="mb-1">@reportData.Summary.InactiveUserCount</h4>
                        <small class="text-muted">Disabled</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Top Performers -->
        <div class="row mb-4">
            <div class="col-md-6 mb-3">
                <div class="card border-warning shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-trophy text-warning" style="font-size: 2.5rem;"></i>
                        <h5 class="mt-2 mb-1">Most Active User</h5>
                        <h3 class="text-warning mb-1">@reportData.Summary.MostActiveUser</h3>
                        <p class="mb-0">
                            <strong>@reportData.Summary.MostActiveUserActions</strong> total actions
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <div class="card border-success shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-cash-stack text-success" style="font-size: 2.5rem;"></i>
                        <h5 class="mt-2 mb-1">Top Revenue Generator</h5>
                        <h3 class="text-success mb-1">@reportData.Summary.TopRevenueUser</h3>
                        <p class="mb-0">
                            <strong>$@reportData.Summary.TopRevenueUserAmount.ToString("N2")</strong> generated
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- User Activity Details -->
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="bi bi-list-task"></i> User Activity Details</h5>
            </div>
            <div class="card-body">
                @if (reportData.UserActivities.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>User</th>
                                    <th>Role</th>
                                    <th class="text-center">Status</th>
                                    <th class="text-end">Invoices</th>
                                    <th class="text-end">Payments</th>
                                    <th class="text-end">Products</th>
                                    <th class="text-end">Total Actions</th>
                                    <th class="text-end">Revenue</th>
                                    <th class="text-end">Engagement</th>
                                    <th class="text-center">Level</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in reportData.UserActivities)
                                {
                                    <tr class="@GetRowClass(user.EngagementLevel)">
                                        <td>
                                            <strong>@user.Username</strong>
                                            <br />
                                            <small class="text-muted">@user.Email</small>
                                        </td>
                                        <td>
                                            <span class="badge @GetRoleBadge(user.Role)">@user.Role</span>
                                        </td>
                                        <td class="text-center">
                                            @if (user.IsActive)
                                            {
                                                <span class="badge bg-success">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Inactive</span>
                                            }
                                        </td>
                                        <td class="text-end">@user.InvoicesCreated</td>
                                        <td class="text-end">@user.PaymentsProcessed</td>
                                        <td class="text-end">@user.ProductsCreated</td>
                                        <td class="text-end"><strong>@user.TotalActions</strong></td>
                                        <td class="text-end text-success">$@user.TotalRevenueGenerated.ToString("N2")</td>
                                        <td class="text-end">
                                            <div class="progress" style="height: 20px;">
                                                <div class="progress-bar @GetEngagementBarColor(user.EngagementScore)" 
                                                     role="progressbar" 
                                                     style="width: @user.EngagementScore%" 
                                                     aria-valuenow="@user.EngagementScore">
                                                    @user.EngagementScore.ToString("N0")
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge @GetEngagementBadge(user.EngagementLevel)">
                                                @user.EngagementLevel
                                            </span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info mb-0">
                        <i class="bi bi-info-circle"></i> No user activity data available.
                    </div>
                }
            </div>
        </div>

        <!-- Activity by Role -->
        <div class="row mb-4">
            <div class="col-md-6 mb-3">
                <div class="card">
                    <div class="card-header bg-light">
                        <h6 class="mb-0"><i class="bi bi-people-fill"></i> Users by Role</h6>
                    </div>
                    <div class="card-body">
                        @if (reportData.Summary.UsersByRole.Any())
                        {
                            @foreach (var role in reportData.Summary.UsersByRole.OrderByDescending(r => r.Value))
                            {
                                <div class="mb-2">
                                    <div class="d-flex justify-content-between mb-1">
                                        <small><strong>@role.Key</strong></small>
                                        <small>@role.Value user(s)</small>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-muted mb-0">No data</p>
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-3">
                <div class="card">
                    <div class="card-header bg-light">
                        <h6 class="mb-0"><i class="bi bi-activity"></i> Actions by Role</h6>
                    </div>
                    <div class="card-body">
                        @if (reportData.Summary.ActionsByRole.Any())
                        {
                            @foreach (var role in reportData.Summary.ActionsByRole.OrderByDescending(r => r.Value))
                            {
                                <div class="mb-2">
                                    <div class="d-flex justify-content-between mb-1">
                                        <small><strong>@role.Key</strong></small>
                                        <small>@role.Value action(s)</small>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-muted mb-0">No data</p>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Insights -->
        <div class="card mb-4">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="bi bi-lightbulb"></i> User Engagement Insights</h5>
            </div>
            <div class="card-body">
                <ul class="mb-0">
                    @{
                        var activePercentage = reportData.TotalUsers > 0 
                            ? (decimal)reportData.ActiveUsers / reportData.TotalUsers * 100 
                            : 0;
                        var highEngagementPercentage = reportData.TotalUsers > 0 
                            ? (decimal)reportData.Summary.HighlyActiveUsers / reportData.TotalUsers * 100 
                            : 0;
                    }
                    <li class="mb-2">
                        <strong>User Activation Rate:</strong> @activePercentage.ToString("N1")% 
                        (@reportData.ActiveUsers of @reportData.TotalUsers)
                    </li>
                    <li class="mb-2">
                        <strong>High Engagement Rate:</strong> @highEngagementPercentage.ToString("N1")% 
                        (@reportData.Summary.HighlyActiveUsers highly active users)
                    </li>
                    @if (reportData.Summary.AverageEngagementScore < 40)
                    {
                        <li class="text-warning mb-2">
                            <strong>‚ö†Ô∏è Low Average Engagement:</strong> Consider user onboarding improvements or feature adoption campaigns.
                        </li>
                    }
                    @if (reportData.Summary.InactiveUserCount > reportData.ActiveUsers)
                    {
                        <li class="text-danger mb-2">
                            <strong>üö® More Inactive Than Active Users:</strong> Review user retention strategies.
                        </li>
                    }
                    @if (reportData.Summary.HighlyActiveUsers > 0)
                    {
                        <li class="text-success">
                            <strong>‚úÖ Engaged User Base:</strong> @reportData.Summary.HighlyActiveUsers highly active users driving platform usage.
                        </li>
                    }
                </ul>
            </div>
        </div>

        <!-- Export Buttons -->
        <div class="card">
            <div class="card-body">
                <h5 class="mb-3"><i class="bi bi-download"></i> Export Report</h5>
                <button class="btn btn-danger me-2" disabled>
                    <i class="bi bi-file-pdf"></i> Export to PDF
                </button>
                <button class="btn btn-success me-2" disabled>
                    <i class="bi bi-file-excel"></i> Export to Excel
                </button>
                <button class="btn btn-info" disabled>
                    <i class="bi bi-file-earmark-spreadsheet"></i> Export to CSV
                </button>
                <p class="text-muted mt-2 mb-0"><small><i class="bi bi-info-circle"></i> Export functionality coming soon</small></p>
            </div>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle"></i> @errorMessage
        </div>
        <button class="btn btn-primary" @onclick="LoadReport">
            <i class="bi bi-arrow-clockwise"></i> Retry
        </button>
    }
</div>

@code {
    private DateTime startDate = DateTime.Now.AddMonths(-1).Date;
    private DateTime endDate = DateTime.Now.Date;
    private string selectedRole = "";
    private bool isLoading = false;
    private UserActivityReportModel? reportData;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadReport();
    }

    private async Task LoadReport()
    {
        isLoading = true;
        errorMessage = null;
        reportData = null;

        try
        {
            var url = $"api/UserReport/activity?startDate={startDate:yyyy-MM-dd}&endDate={endDate:yyyy-MM-dd}";
            
            if (!string.IsNullOrEmpty(selectedRole))
                url += $"&role={selectedRole}";

            reportData = await Http.GetFromJsonAsync<UserActivityReportModel>(url);
        }
        catch (HttpRequestException httpEx)
        {
            errorMessage = $"Network error: {httpEx.Message}. Please check if the API is running.";
            Console.WriteLine($"HTTP Error: {httpEx.Message}");
        }
        catch (Exception ex)
        {
            errorMessage = $"Error loading user activity report: {ex.Message}";
            Console.WriteLine($"Error: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private string GetRoleBadge(string role)
    {
        return role switch
        {
            "Admin" => "bg-danger",
            "Manager" => "bg-warning text-dark",
            "User" => "bg-primary",
            _ => "bg-secondary"
        };
    }

    private string GetEngagementBadge(string level)
    {
        return level switch
        {
            "High" => "bg-success",
            "Medium" => "bg-info",
            "Low" => "bg-warning text-dark",
            "Minimal" => "bg-secondary",
            "Inactive" => "bg-dark",
            _ => "bg-light text-dark"
        };
    }

    private string GetEngagementBarColor(decimal score)
    {
        return score switch
        {
            >= 70 => "bg-success",
            >= 40 => "bg-info",
            >= 10 => "bg-warning",
            _ => "bg-secondary"
        };
    }

    private string GetRowClass(string level)
    {
        return level switch
        {
            "High" => "table-success",
            "Inactive" => "table-secondary",
            _ => ""
        };
    }
}
