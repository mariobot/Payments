@page "/AddMoney"
@using Hyip_Payments.Command.MoneyCommand
@using Hyip_Payments.Models
@using MediatR
@inject IMediator Mediator

<h3>Add Money</h3>

<EditForm Model="@money" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label class="form-label">Amount</label>
        <InputNumber class="form-control" @bind-Value="money.Amount" />
        <ValidationMessage For="@(() => money.Amount)" />
    </div>

    <div class="mb-3">
        <label class="form-label">Currency</label>
        <InputText class="form-control" @bind-Value="money.Currency" />
        <ValidationMessage For="@(() => money.Currency)" />
    </div>

    <div class="mb-3">
        <label class="form-label">Country</label>
        <InputText class="form-control" @bind-Value="money.Country" />
        <ValidationMessage For="@(() => money.Country)" />
    </div>

    <button type="submit" class="btn btn-primary">Add Money</button>
</EditForm>

@if (successMessage != null)
{
    <div class="alert alert-success mt-3">@successMessage</div>
}

@code {
    private MoneyModel money = new();
    private string? successMessage;

    private async Task HandleValidSubmit()
    {
        try
        {
            // Call MediatR command
            await Mediator.Send(new AddMoneyCommand(money));
            successMessage = $"Money added: {money.Amount} {money.Currency} for {money.Country}";
            money = new(); // Reset form
        }
        catch (Exception ex)
        {
            successMessage = $"Error: {ex.Message}";
        }
    }
}
